---
// src/components/contacto/ContactInfo.astro
---

<section class="contact-info-section">
    <div class="container">
        <div class="info-grid">
            <address class="info-card parent-hover" tabindex="0">
                <div class="icon-box lg purple">
                    <i class="ph-duotone ph-envelope-simple"></i>
                </div>
                <div class="info-text">
                    <h3>Correo Electrónico</h3>
                    <p>Consultas generales y soporte técnico</p>
                    <a href="mailto:contacto@isinova.cl" class="info-link"
                        >contacto@isinova.cl</a
                    >
                </div>
            </address>

            <div class="info-card parent-hover" tabindex="0">
                <div class="icon-box lg blue">
                    <i class="ph-duotone ph-clock"></i>
                </div>
                <div class="info-text">
                    <h3>Horario de Atención</h3>
                    <p>Nuestro equipo está disponible para ti</p>
                    <span class="info-value">Lun - Vie: 9:00 - 18:00</span>
                </div>
            </div>

            <address class="info-card parent-hover" tabindex="0">
                <div class="icon-box lg green">
                    <i class="ph-duotone ph-linkedin-logo"></i>
                </div>
                <div class="info-text">
                    <h3>Redes Profesionales</h3>
                    <p>Conéctate con nuestro liderazgo técnico</p>
                    <a
                        href="https://www.linkedin.com/company/isinova"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="info-link">LinkedIn Isinova</a
                    >
                </div>
            </address>
        </div>
    </div>
</section>

<style>
    .contact-info-section {
        padding: 2rem 0 6rem;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .info-card {
        background: white;
        padding: 2.5rem;
        border-radius: 1.5rem;
        border: 1px solid #e2e8f0;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        font-style: normal;
        gap: 1rem;
    }

    .info-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px -5px rgba(99, 102, 241, 0.1);
        border-color: var(--primary);
    }

    .info-text h3 {
        font-size: 1.25rem;
        font-weight: 800;
        color: var(--dark);
        margin-bottom: 0.5rem;
    }

    .info-text p {
        color: var(--slate);
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
        line-height: 1.5;
    }

    .info-link,
    .info-value {
        font-weight: 700;
        color: var(--dark);
        text-decoration: none;
        font-size: 1.1rem;
        transition: color 0.2s;
    }

    .info-link:hover {
        color: var(--primary);
    }

    @media (max-width: 768px) {
        .contact-info-section {
            padding: 3rem 0;
        }
        .info-card {
            padding: 2rem;
        }
    }
</style>
