<style>
    /* Variables locales para el tema oscuro de esta sección */
    .about-section-dark {
        --bg-main: #0f172a;       /* Fondo principal oscuro */
        --bg-surface: #1e293b;    /* Fondo de tarjetas/stats */
        --text-heading: #f8fafc;  /* Texto casi blanco */
        --text-body: #94a3b8;     /* Texto gris claro */
        --border-subtle: rgba(255, 255, 255, 0.08); /* Bordes sutiles */

        padding: 6rem 0;
        background-color: var(--bg-main);
        position: relative;
        overflow: hidden;
        color: var(--text-body);
    }

    .about-layout {
        display: grid;
        grid-template-columns: 1fr;
        gap: 4rem;
        align-items: center;
    }

    @media (min-width: 992px) {
        .about-layout {
            grid-template-columns: 1.1fr 0.9fr;
            gap: 5rem;
        }
    }

    /* --- Contenido Izquierdo --- */
    .about-content {
        max-width: 600px;
    }

    .badge-brand {
        display: inline-block;
        font-size: 0.85rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--primary);
        /* Fondo más oscuro para el badge */
        background: rgba(98, 70, 234, 0.15);
        padding: 6px 12px;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        line-height: 1.1;
        color: var(--text-heading); /* Color claro */
        margin-bottom: 1.5rem;
    }

    @media (min-width: 768px) {
        .section-title { font-size: 3.5rem; }
    }

    .text-gradient {
        background: linear-gradient(135deg, var(--primary) 0%, #8b5cf6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .about-text {
        font-size: 1.125rem;
        color: var(--text-body); /* Color claro */
        line-height: 1.7;
        margin-bottom: 3rem;
    }

    /* --- Stats (Dark Mode) --- */
    .stats-grid {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: var(--bg-surface); /* Superficie oscura */
        border: 1px solid var(--border-subtle); /* Borde sutil */
        border-radius: 1rem;
        padding: 1.5rem;
    }

    .stat-box {
        text-align: center;
        flex: 1;
    }

    .stat-value {
        font-size: 1.75rem;
        font-weight: 800;
        color: var(--text-heading); /* Valor claro */
        line-height: 1;
        margin-bottom: 0.25rem;
    }

    .stat-label {
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--text-body);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .stat-divider {
        width: 1px;
        height: 40px;
        background: var(--border-subtle); /* Divisor sutil */
    }

    /* --- Contenido Derecho (Valores Dark Mode) --- */
    .about-values {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        position: relative;
    }

    .dot-pattern {
        position: absolute;
        top: -20px;
        right: -20px;
        width: 200px;
        height: 200px;
        /* Puntos claros sobre fondo oscuro */
        background-image: radial-gradient(rgba(255, 255, 255, 0.1) 2px, transparent 2px);
        background-size: 20px 20px;
        z-index: 0;
        opacity: 0.4;
    }

    .value-card {
        background: var(--bg-surface); /* Superficie oscura */
        padding: 2rem;
        border-radius: 1.25rem;
        border: 1px solid var(--border-subtle);
        box-shadow: 0 4px 20px -5px rgba(0, 0, 0, 0.3); /* Sombra más oscura */
        display: flex;
        gap: 1.25rem;
        align-items: flex-start;
        position: relative;
        z-index: 1;
        transition: all 0.3s ease;
    }

    .value-card:hover {
        transform: translateY(-5px);
        border-color: rgba(98, 70, 234, 0.5); /* Borde primario al hover */
        background: #232d42; /* Ligeramente más claro al hover */
    }

    @media (min-width: 992px) {
        .card-offset {
            margin-left: 3rem;
        }
    }

    .icon-box {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        flex-shrink: 0;
        transition: transform 0.3s ease;
    }

    .value-card:hover .icon-box {
        transform: scale(1.1) rotate(-5deg);
    }

    /* Fondos de iconos translúcidos oscuros */
    .icon-box.primary { background: rgba(98, 70, 234, 0.15); color: var(--primary); }
    .icon-box.accent { background: rgba(0, 255, 140, 0.15); color: var(--accent); }

    .value-card h4 {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-heading); /* Título claro */
        margin-bottom: 0.5rem;
    }

    .value-card p {
        font-size: 0.95rem;
        color: var(--text-body); /* Texto claro */
        line-height: 1.5;
        margin: 0;
    }
</style>