---
import Logo from "./Logo.astro";
import { getCollection, type CollectionEntry } from "astro:content";

// Fetch services from content collection
const servicesCollection = await getCollection("servicios");
const servicesData = servicesCollection
    .sort((a, b) => (a.data.order ?? 99) - (b.data.order ?? 99))
    .map((service: CollectionEntry<"servicios">) => ({
        slug: service.slug,
        ...service.data,
    }));

interface HeaderService {
    slug: string;
    title: string;
    shortTitle?: string;
    icon: string;
    tags: string[];
}

// Opcional: Definir colores para iconos dinámicamente si quieres variedad
const iconColors = ["purple", "green", "blue", "orange"];
---

<header id="site-header" class="site-header">
    <div class="top-bar">
        <div class="container top-bar-inner">
            <div class="top-left">
                <a href="mailto:contacto@isinova.cl" class="top-link">
                    <i class="ph-fill ph-envelope-simple"></i>
                    <span>contacto@isinova.cl</span>
                </a>
                <span class="separator"></span>
                <span class="top-text">
                    <i class="ph-fill ph-clock"></i> Lun-Vie 9:00 - 18:00
                </span>
            </div>
        </div>
    </div>

    <div class="main-bar">
        <div class="container nav-container">
            <a href="/" class="logo-wrapper" aria-label="Volver al inicio">
                <Logo variant="normal" className="header-logo" />
            </a>

            <nav class="desktop-nav">
                <a href="/#inicio" class="nav-item"><span>Inicio</span></a>

                <div class="nav-dropdown-group">
                    <a href="/servicios" class="nav-item has-dropdown">
                        <span>Servicios</span>
                        <i class="ph-bold ph-caret-down caret-icon"></i>
                    </a>
                    <div class="dropdown-menu">
                        <div class="dropdown-content">
                            {
                                servicesData.map(
                                    (service: HeaderService, index: number) => {
                                        // Asignar color cíclico para variedad visual
                                        const colorClass =
                                            iconColors[
                                                index % iconColors.length
                                            ];

                                        return (
                                            <a
                                                href={`/servicios/${service.slug}`}
                                                class="dropdown-item parent-hover"
                                            >
                                                <div
                                                    class={`icon-box sm ${colorClass}`}
                                                >
                                                    <i
                                                        class={`ph-duotone ${service.icon}`}
                                                    />
                                                </div>
                                                <div class="text-box">
                                                    <strong>
                                                        {service.shortTitle ||
                                                            service.title}
                                                    </strong>
                                                    {/* Usamos el primer tag como descripción corta o un texto fijo si prefieres */}
                                                    <span>
                                                        {service.tags[0] ||
                                                            "Solución Educativa"}
                                                    </span>
                                                </div>
                                                <i class="ph-bold ph-arrow-right arrow-icon" />
                                            </a>
                                        );
                                    },
                                )
                            }
                        </div>
                    </div>
                </div>

                <a href="/#metodologia" class="nav-item"
                    ><span>Metodología</span></a
                >
                <a href="/nosotros" class="nav-item"><span>Nosotros</span></a>
            </nav>

            <div class="header-actions">
                <a href="/contacto" class="btn-header-glow">
                    <span>Agendar Reunión</span>
                    <i class="ph-bold ph-calendar-plus"></i>
                </a>

                <button
                    id="open-menu"
                    class="hamburger-btn"
                    aria-label="Abrir menú"
                >
                    <i class="ph ph-list"></i>
                </button>
            </div>
        </div>
    </div>
</header>

<div id="mobile-overlay" class="mobile-overlay"></div>

<aside id="mobile-drawer" class="mobile-drawer">
    <div class="drawer-header">
        <span class="drawer-title">Menú</span>
        <button id="close-menu" class="close-btn" aria-label="Cerrar menú">
            <i class="ph ph-x"></i>
        </button>
    </div>

    <div class="drawer-content">
        <nav class="mobile-nav">
            <ul class="nav-list">
                <li>
                    <a href="/#inicio" class="mobile-link">Inicio</a>
                </li>

                <li class="accordion-item">
                    <button class="mobile-link accordion-trigger">
                        Servicios
                        <i class="ph-bold ph-caret-down accordion-icon"></i>
                    </button>
                    <div class="accordion-content">
                        <ul class="sub-list">
                            {
                                servicesData.map(
                                    (service: HeaderService, index: number) => {
                                        const colorClass =
                                            iconColors[
                                                index % iconColors.length
                                            ];
                                        return (
                                            <li>
                                                <a
                                                    href={`/servicios/${service.slug}`}
                                                    class="sub-link"
                                                >
                                                    <span
                                                        class={`dot ${colorClass}`}
                                                    />
                                                    {service.shortTitle ||
                                                        service.title}
                                                </a>
                                            </li>
                                        );
                                    },
                                )
                            }
                        </ul>
                    </div>
                </li>

                <li>
                    <a href="/#metodologia" class="mobile-link">Metodología</a>
                </li>
                <li>
                    <a href="/nosotros" class="mobile-link">Nosotros</a>
                </li>
            </ul>
        </nav>

        <div class="drawer-footer">
            <a href="/contacto" class="btn-mobile-primary"> Agendar Reunión </a>
            <div class="mobile-contact-info">
                <a href="mailto:contacto@isinova.cl">contacto@isinova.cl</a>
            </div>
        </div>
    </div>
</aside>

<script>
    document.addEventListener("astro:page-load", () => {
        // Elements
        const header = document.getElementById("site-header");
        const openBtn = document.getElementById("open-menu");
        const closeBtn = document.getElementById("close-menu");
        const overlay = document.getElementById("mobile-overlay");
        const drawer = document.getElementById("mobile-drawer");
        const links = document.querySelectorAll(
            ".mobile-link:not(.accordion-trigger), .sub-link, .btn-mobile-primary",
        );
        const accordionTrigger = document.querySelector(".accordion-trigger");
        const accordionItem = document.querySelector(".accordion-item");

        // Scroll Logic (Throttle simple)
        let ticking = false;
        const onScroll = () => {
            if (!ticking) {
                window.requestAnimationFrame(() => {
                    header?.classList.toggle("scrolled", window.scrollY > 10);
                    ticking = false;
                });
                ticking = true;
            }
        };
        window.addEventListener("scroll", onScroll, { passive: true });

        // Menu Toggle Logic
        const toggleMenu = (show: boolean) => {
            const method = show ? "add" : "remove";
            overlay?.classList[method]("active");
            drawer?.classList[method]("active");
            document.body.style.overflow = show ? "hidden" : "";
        };

        openBtn?.addEventListener("click", () => toggleMenu(true));
        closeBtn?.addEventListener("click", () => toggleMenu(false));
        overlay?.addEventListener("click", () => toggleMenu(false));

        // Close menu on link click
        links.forEach((link) => {
            link.addEventListener("click", () => toggleMenu(false));
        });

        // Accordion Logic
        accordionTrigger?.addEventListener("click", () => {
            accordionItem?.classList.toggle("open");
        });

        // Cleanup
        document.addEventListener(
            "astro:before-swap",
            () => {
                window.removeEventListener("scroll", onScroll);
                document.body.style.overflow = "";
            },
            { once: true },
        );
    });
</script>

<style>
    /* ... (MANTENER TODOS LOS ESTILOS PREVIOS INTACTOS) ... */

    /* Agrega este estilo extra para el color naranja si lo usas en la rotación */
    .orange {
        background: #fff7ed;
        color: #ea580c;
    }

    /* =========================================
       VARIABLES & CORE
       ========================================= */
    .site-header {
        --h-bg: #ffffff;
        --h-text: #0f172a;
        --h-muted: #64748b;
        --top-bg: #0f172a;
        --top-text: rgba(255, 255, 255, 0.9);
        --shadow-md: 0 4px 20px -5px rgba(0, 0, 0, 0.1);

        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 999;
        transition: transform 0.3s ease;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    /* =========================================
       DESKTOP STYLES
       ========================================= */
    .top-bar {
        display: none;
        background: var(--top-bg);
        color: var(--top-text);
        font-size: 0.8rem;
        font-weight: 500;
        height: 40px;
    }
    @media (min-width: 992px) {
        .top-bar {
            display: block;
        }
    }

    .site-header.scrolled .top-bar {
        display: none;
    }

    .top-bar-inner {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 100%;
    }
    .top-left {
        display: flex;
        gap: 1.5rem;
    }
    .top-link {
        color: inherit;
        text-decoration: none;
        display: flex;
        gap: 6px;
        align-items: center;
    }
    .separator {
        width: 1px;
        height: 14px;
        background: rgba(255, 255, 255, 0.2);
    }
    .top-text {
        display: flex;
        gap: 6px;
        align-items: center;
        opacity: 0.9;
    }

    .main-bar {
        height: 60px;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

    @media (min-width: 992px) {
        .main-bar {
            height: 80px;
        }
    }
    .site-header.scrolled .main-bar {
        background: rgba(255, 255, 255, 0.98);
        box-shadow: var(--shadow-md);
    }

    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 100%;
    }

    .logo-wrapper {
        height: 28px;
        display: flex;
        align-items: center;
    }
    @media (min-width: 992px) {
        .logo-wrapper {
            height: 36px;
        }
    }
    .header-logo {
        height: 100%;
        width: auto;
    }

    .desktop-nav {
        display: none;
        align-items: center;
        gap: 2.5rem;
        height: 100%;
    }
    @media (min-width: 992px) {
        .desktop-nav {
            display: flex;
        }
    }

    .nav-item {
        position: relative;
        font-size: 0.95rem;
        font-weight: 600;
        color: var(--h-text);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 4px;
        padding: 0.5rem 0;
    }
    .nav-item:hover {
        color: var(--primary);
    }

    .nav-dropdown-group {
        position: relative;
        height: 100%;
        display: flex;
        align-items: center;
    }
    /* Ajuste de ancho automático para contenido dinámico, con un max-height si hay muchos servicios */
    .dropdown-menu {
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%) translateY(10px);
        width: 360px; /* Un poco más ancho para nombres largos */
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.15);
        opacity: 0;
        visibility: hidden;
        transition: all 0.2s ease;
        padding-top: 10px;
    }
    .nav-dropdown-group:hover .dropdown-menu {
        opacity: 1;
        visibility: visible;
        transform: translateX(-50%) translateY(0);
    }

    .dropdown-content {
        background: white;
        border-radius: 14px;
        padding: 8px;
        border: 1px solid rgba(0, 0, 0, 0.05);
        max-height: 400px;
        overflow-y: auto; /* Scroll si hay muchos servicios */
    }

    .dropdown-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px;
        border-radius: 10px;
        text-decoration: none;
        transition: background 0.2s;
    }
    .dropdown-item:hover {
        background: #f8fafc;
    }

    .text-box {
        display: flex;
        flex-direction: column;
        flex: 1;
    }
    .text-box strong {
        font-size: 0.9rem;
        color: var(--h-text);
    }
    .text-box span {
        font-size: 0.75rem;
        color: var(--h-muted);
    }

    .arrow-icon {
        font-size: 0.9rem;
        color: var(--primary);
        opacity: 0;
        transform: translateX(-5px);
        transition: all 0.2s;
    }
    .dropdown-item:hover .arrow-icon {
        opacity: 1;
        transform: translateX(0);
    }

    .header-actions {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    .btn-header-glow {
        display: none;
        align-items: center;
        gap: 8px;
        background: var(--primary);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 100px;
        font-size: 0.9rem;
        font-weight: 600;
        text-decoration: none;
        transition: background 0.2s;
    }
    .btn-header-glow:hover {
        background: var(--primary-dark);
    }
    @media (min-width: 992px) {
        .btn-header-glow {
            display: inline-flex;
        }
    }

    /* =========================================
       MOBILE REDESIGN
       ========================================= */
    .hamburger-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        background: transparent;
        border: none;
        padding: 8px;
        font-size: 1.75rem;
        color: var(--h-text);
        cursor: pointer;
    }
    @media (min-width: 992px) {
        .hamburger-btn {
            display: none;
        }
    }

    .mobile-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.4);
        z-index: 1001;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease;
    }
    .mobile-overlay.active {
        opacity: 1;
        visibility: visible;
    }

    .mobile-drawer {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        max-width: 320px;
        background: white;
        z-index: 1002;
        transform: translateX(100%);
        transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        display: flex;
        flex-direction: column;
        box-shadow: -5px 0 25px rgba(0, 0, 0, 0.1);
    }
    .mobile-drawer.active {
        transform: translateX(0);
    }

    .drawer-header {
        height: 60px;
        padding: 0 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #f1f5f9;
    }
    .drawer-title {
        font-weight: 700;
        font-size: 1.1rem;
        color: var(--h-text);
    }
    .close-btn {
        background: #f8fafc;
        border: none;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        color: var(--h-text);
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

    .drawer-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
    }

    .nav-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
    }
    .nav-list > li {
        border-bottom: 1px solid #f8fafc;
    }

    .mobile-link {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.25rem 1.5rem;
        font-size: 1.05rem;
        font-weight: 600;
        color: var(--h-text);
        text-decoration: none;
        width: 100%;
        background: transparent;
        border: none;
        text-align: left;
        cursor: pointer;
        transition: color 0.2s;
    }
    .mobile-link:active {
        background-color: #f8fafc;
    }

    .accordion-trigger .accordion-icon {
        transition: transform 0.3s ease;
        color: var(--h-muted);
    }
    .accordion-item.open .accordion-icon {
        transform: rotate(180deg);
        color: var(--primary);
    }
    .accordion-item.open .mobile-link {
        color: var(--primary);
    }

    .accordion-content {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background-color: #fafbfc;
    }
    /* Aumentamos max-height para soportar más items si es necesario */
    .accordion-item.open .accordion-content {
        max-height: 500px;
    }

    .sub-list {
        list-style: none;
        padding: 0.5rem 0;
        margin: 0;
    }
    .sub-link {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 0.85rem 2rem;
        font-size: 0.95rem;
        color: var(--h-muted);
        text-decoration: none;
        font-weight: 500;
    }
    .sub-link:active {
        color: var(--h-text);
    }

    .dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        display: inline-block;
    }
    .dot.purple {
        background-color: var(--primary);
    }
    .dot.green {
        background-color: #059669;
    }
    .dot.blue {
        background-color: #2563eb;
    }
    .dot.orange {
        background-color: #ea580c;
    }

    .drawer-footer {
        margin-top: auto;
        padding: 1.5rem;
        background: white;
    }

    .btn-mobile-primary {
        display: block;
        width: 100%;
        text-align: center;
        background: var(--primary);
        color: white;
        padding: 1rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        margin-bottom: 1rem;
    }

    .mobile-contact-info {
        text-align: center;
    }
    .mobile-contact-info a {
        color: var(--h-muted);
        font-size: 0.9rem;
        text-decoration: none;
    }
</style>
