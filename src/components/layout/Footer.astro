---
import LogoWhite from "./LogoWhite.astro";
import { getCollection, type CollectionEntry } from "astro:content";

const currentYear = new Date().getFullYear();
const MAX_FOOTER_SERVICES = 5;

// Fetch services from content collection
const servicesDataRaw = await getCollection("servicios");
const servicesData = servicesDataRaw.map(
    (service: CollectionEntry<"servicios">) => ({
        slug: service.slug,
        ...service.data,
    }),
);

// 2. CORRECCIÓN DE TIPO: Definimos qué es un 'service' para el Footer
interface ServiceItem {
    slug: string;
    title: string;
    shortTitle?: string;
}
---

<footer class="site-footer bg-tech-dark">
    <div class="bg-base"></div>
    <div class="tech-grid-bg"></div>
    <div class="footer-glow glow-1"></div>
    <div class="footer-glow glow-2"></div>

    <div class="container relative-z">
        <div class="footer-top">
            <div class="footer-brand-col">
                <a href="/" class="footer-logo-link" aria-label="Inicio">
                    <LogoWhite
                        className="footer-logo-svg"
                        transition:name="logo-footer"
                    />
                </a>
                <p class="brand-desc">
                    Transformamos instituciones educativas con tecnología
                    estable, segura y centrada en las personas. Expertos en
                    Moodle y Canvas en Chile.
                </p>
                <div class="social-links">
                    <a
                        href="https://linkedin.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="LinkedIn"
                    >
                        <i class="ph-fill ph-linkedin-logo"></i>
                    </a>
                    <a
                        href="https://instagram.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="Instagram"
                    >
                        <i class="ph-fill ph-instagram-logo"></i>
                    </a>
                    <a
                        href="https://wa.me/56912345678"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="WhatsApp"
                    >
                        <i class="ph-fill ph-whatsapp-logo"></i>
                    </a>
                </div>
            </div>

            <div class="footer-nav-col">
                <h4 class="col-title">Soluciones</h4>
                <ul class="footer-links">
                    {
                        /* 3. APLICACIÓN DE TIPO: Le decimos a map que 'service' es de tipo ServiceItem */
                    }
                    {
                        servicesData
                            .slice(0, MAX_FOOTER_SERVICES)
                            .map((service: ServiceItem) => (
                                <li>
                                    <a href={`/servicios/${service.slug}`}>
                                        {service.shortTitle || service.title}
                                    </a>
                                </li>
                            ))
                    }

                    {
                        servicesData.length > MAX_FOOTER_SERVICES && (
                            <li>
                                <a href="/servicios" class="link-more">
                                    Ver todos ({servicesData.length})...
                                </a>
                            </li>
                        )
                    }
                </ul>
            </div>

            <div class="footer-nav-col">
                <h4 class="col-title">Compañía</h4>
                <ul class="footer-links">
                    <li><a href="/nosotros">Sobre Nosotros</a></li>
                    <li><a href="/#metodologia">Metodología</a></li>
                    <li><a href="/contacto">Contacto</a></li>
                    <li><a href="/servicios">Catálogo Completo</a></li>
                </ul>
            </div>

            <div class="footer-newsletter-col">
                <h4 class="col-title">Mantente al día</h4>
                <p class="newsletter-desc">
                    Recibe novedades sobre tecnología educativa y
                    actualizaciones de la plataforma.
                </p>

                <form class="newsletter-form" id="footer-newsletter">
                    <div class="input-wrapper">
                        <i class="ph ph-envelope-simple input-icon"></i>
                        <input
                            type="email"
                            id="newsletter-email"
                            placeholder="Tu correo electrónico"
                            required
                        />
                    </div>
                    <button
                        type="submit"
                        id="newsletter-btn"
                        aria-label="Suscribirse"
                    >
                        <span class="btn-icon"
                            ><i class="ph-bold ph-arrow-right"></i></span
                        >
                        <span class="btn-loading" style="display: none;"
                            ><i class="ph-bold ph-circle-notch spin"></i></span
                        >
                    </button>
                    <div
                        id="newsletter-message"
                        class="newsletter-message"
                        style="display: none;"
                    >
                    </div>
                </form>

                <div class="contact-mini">
                    <a href="mailto:hola@isinova.cl">hola@isinova.cl</a>
                    <span>•</span>
                    <span>Santiago, Chile</span>
                </div>
            </div>
        </div>

        <hr class="footer-divider" />

        <div class="footer-bottom">
            <p class="copyright">
                &copy; {currentYear} Isinova SpA. Todos los derechos reservados.
            </p>
            <div class="legal-links">
                <a href="/privacidad">Política de Privacidad</a>
                <a href="/terminos">Términos y Condiciones</a>
            </div>
        </div>
    </div>
</footer>

<script>
    document.addEventListener("astro:page-load", () => {
        const form = document.getElementById(
            "footer-newsletter",
        ) as HTMLFormElement;
        const input = document.getElementById(
            "newsletter-email",
        ) as HTMLInputElement;
        const btn = document.getElementById(
            "newsletter-btn",
        ) as HTMLButtonElement;
        const btnIcon = btn?.querySelector(".btn-icon") as HTMLElement;
        const btnLoading = btn?.querySelector(".btn-loading") as HTMLElement;
        const messageBox = document.getElementById(
            "newsletter-message",
        ) as HTMLElement;

        if (!form) return;

        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            const email = input.value;
            setLoading(true);

            try {
                const response = await fetch(
                    "/.netlify/functions/contact-form",
                    {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({
                            email,
                            name: "Suscriptor Newsletter",
                            project: "newsletter",
                            listId: 5,
                            source: "Footer Newsletter",
                        }),
                    },
                );

                const result = await response.json();

                if (response.ok && result.success) {
                    showMessage("¡Gracias por suscribirte!", "success");
                    form.reset();
                } else {
                    showMessage("Error al suscribir. Reintenta.", "error");
                }
            } catch (error) {
                showMessage("Sin conexión. Reintenta.", "error");
            } finally {
                setLoading(false);
            }
        });

        function setLoading(isLoading: boolean) {
            if (btn) btn.disabled = isLoading;
            if (btnIcon) btnIcon.style.display = isLoading ? "none" : "block";
            if (btnLoading)
                btnLoading.style.display = isLoading ? "block" : "none";
        }

        function showMessage(msg: string, type: "success" | "error") {
            if (!messageBox) return;
            messageBox.textContent = msg;
            messageBox.className = `newsletter-message ${type}`;
            messageBox.style.display = "block";

            setTimeout(() => {
                messageBox.style.display = "none";
            }, 5000);
        }
    });
</script>

<style>
    /* ... (Tus estilos se mantienen intactos, no es necesario cambiarlos) ... */

    .link-more {
        font-size: 0.85rem !important;
        font-style: italic;
        opacity: 0.8;
    }

    /* Copia aquí el resto de estilos del bloque anterior si no los tienes ya */
    .site-footer {
        background-color: #0f172a;
        color: #cbd5e1;
        padding: 5rem 0 2rem 0;
        position: relative;
        overflow: hidden;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }
    .relative-z {
        position: relative;
        z-index: 10;
    }
    .bg-base {
        position: absolute;
        inset: 0;
        background-color: #0f172a;
        z-index: 0;
    }
    .tech-grid-bg {
        position: absolute;
        inset: 0;
        background-image: radial-gradient(
            rgba(255, 255, 255, 0.05) 1px,
            transparent 1px
        );
        background-size: 30px 30px;
        opacity: 0.3;
        pointer-events: none;
        z-index: 1;
    }
    .footer-glow {
        position: absolute;
        width: 500px;
        height: 500px;
        border-radius: 50%;
        filter: blur(120px);
        opacity: 0.15;
        pointer-events: none;
        z-index: 1;
    }
    .glow-1 {
        top: -150px;
        left: -150px;
        background: var(--primary, #6366f1);
    }
    .glow-2 {
        bottom: -150px;
        right: -150px;
        background: var(--accent, #10b981);
    }
    .footer-top {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        margin-bottom: 4rem;
        position: relative;
        z-index: 2;
    }
    @media (min-width: 768px) {
        .footer-top {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    @media (min-width: 1024px) {
        .footer-top {
            grid-template-columns: 2fr 1fr 1fr 1.5fr;
            gap: 4rem;
        }
    }
    .footer-logo-link {
        display: inline-block;
        margin-bottom: 1.5rem;
        width: 140px;
    }
    .brand-desc {
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
        color: #94a3b8;
        max-width: 300px;
    }
    .social-links {
        display: flex;
        gap: 0.75rem;
    }
    .social-links a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 38px;
        height: 38px;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.05);
        color: white;
        text-decoration: none;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }
    .social-links a:hover {
        background: var(--primary, #6366f1);
        border-color: var(--primary, #6366f1);
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(99, 102, 241, 0.3);
    }
    .col-title {
        color: white;
        font-size: 1.1rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        display: block;
    }
    .footer-links {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }
    .footer-links a {
        color: #94a3b8;
        text-decoration: none;
        font-size: 0.95rem;
        transition: all 0.2s ease;
        display: inline-block;
    }
    .footer-links a:hover {
        color: var(--accent, #10b981);
        transform: translateX(4px);
    }
    .newsletter-desc {
        font-size: 0.9rem;
        color: #94a3b8;
        margin-bottom: 1rem;
    }
    .newsletter-form {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }
    .input-wrapper {
        position: relative;
        flex-grow: 1;
    }
    .input-icon {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
        pointer-events: none;
    }
    .newsletter-form input {
        width: 100%;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 10px 12px 10px 36px;
        border-radius: 8px;
        color: white;
        font-size: 0.9rem;
        outline: none;
        transition:
            border-color 0.3s,
            background 0.3s;
    }
    .newsletter-form input:focus {
        border-color: var(--primary, #6366f1);
        background: rgba(255, 255, 255, 0.1);
    }
    .newsletter-form button {
        background: var(--primary, #6366f1);
        color: white;
        border: none;
        width: 42px;
        border-radius: 8px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
    }
    .newsletter-form button:hover {
        background: #4f46e5;
        transform: translateY(-2px);
    }
    .contact-mini {
        font-size: 0.85rem;
        color: #64748b;
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
    .contact-mini a {
        color: #94a3b8;
        text-decoration: none;
        transition: color 0.2s;
    }
    .contact-mini a:hover {
        color: white;
    }
    .footer-divider {
        border: 0;
        height: 1px;
        background: rgba(255, 255, 255, 0.1);
        margin-bottom: 2rem;
        position: relative;
        z-index: 2;
    }
    .footer-bottom {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
        text-align: center;
        font-size: 0.85rem;
        color: #64748b;
        position: relative;
        z-index: 2;
    }
    @media (min-width: 768px) {
        .footer-bottom {
            flex-direction: row;
            justify-content: space-between;
            text-align: left;
        }
    }
    .legal-links {
        display: flex;
        gap: 1.5rem;
    }
    .legal-links a {
        color: #64748b;
        text-decoration: none;
        transition: color 0.2s;
    }
    .legal-links a:hover {
        color: white;
    }

    /* Newsletter feedback */
    .newsletter-message {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        margin-top: 0.5rem;
        font-size: 0.75rem;
        font-weight: 600;
    }
    .newsletter-message.success {
        color: var(--accent, #10b981);
    }
    .newsletter-message.error {
        color: #f87171;
    }

    .spin {
        animation: spin 1s linear infinite;
        display: inline-block;
    }
    @keyframes spin {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
</style>
