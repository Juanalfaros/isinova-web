---
/**
 * Toast.astro
 * Sistema de notificaciones global en Vanilla JS.
 * Expone la función window.showToast(message, type)
 */
---

<div id="toast-container" class="toast-container"></div>

<script>
    // @ts-nocheck
    (function () {
        const container = document.getElementById("toast-container");

        window.showToast = function (
            message,
            type = "success",
            duration = 5000,
        ) {
            if (!container) return;

            const toast = document.createElement("div");
            toast.className = `toast toast-${type}`;

            // Iconos según el tipo
            const icon =
                type === "success"
                    ? '<i class="ph-fill ph-check-circle"></i>'
                    : '<i class="ph-fill ph-warning-circle"></i>';

            toast.innerHTML = `
                <div class="toast-icon">${icon}</div>
                <div class="toast-content">${message}</div>
                <button class="toast-close" aria-label="Cerrar">
                    <i class="ph ph-x"></i>
                </button>
                <div class="toast-progress"></div>
            `;

            container.appendChild(toast);

            // Manejo de la barra de progreso y auto-cierre
            const progress = toast.querySelector(".toast-progress");
            progress.style.transition = `transform ${duration}ms linear`;

            // Forzar reflow para que la transición funcione
            requestAnimationFrame(() => {
                progress.style.transform = "scaleX(0)";
            });

            const closeToast = () => {
                toast.classList.add("toast-exit");
                toast.addEventListener("animationend", () => {
                    toast.remove();
                });
            };

            const autoCloseTimeout = setTimeout(closeToast, duration);

            toast
                .querySelector(".toast-close")
                .addEventListener("click", () => {
                    clearTimeout(autoCloseTimeout);
                    closeToast();
                });
        };
    })();
</script>

<style is:global>
    .toast-container {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        z-index: 10000;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        pointer-events: none;
        max-width: 400px;
        width: calc(100% - 4rem);
    }

    /* Ajuste para móviles para no chocar con el botón de WhatsApp (que suele estar a la derecha) */
    @media (max-width: 768px) {
        .toast-container {
            right: 1rem;
            bottom: 5rem; /* Subimos un poco para no tapar el botón de WhatsApp */
            width: calc(100% - 2rem);
        }
    }

    .toast {
        position: relative;
        background: rgba(15, 23, 42, 0.85);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 1rem 1.25rem;
        color: white;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.3);
        pointer-events: auto;
        animation: toast-enter 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        overflow: hidden;
    }

    .toast-exit {
        animation: toast-exit 0.3s ease forwards;
    }

    .toast-icon {
        font-size: 1.5rem;
        flex-shrink: 0;
        display: flex;
        align-items: center;
    }

    .toast-success .toast-icon {
        color: var(--accent, #10b981);
    }
    .toast-error .toast-icon {
        color: #f87171;
    }

    .toast-content {
        font-size: 0.95rem;
        font-weight: 500;
        line-height: 1.4;
        flex-grow: 1;
    }

    .toast-close {
        background: transparent;
        border: none;
        color: rgba(255, 255, 255, 0.5);
        cursor: pointer;
        padding: 0.25rem;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: color 0.2s;
        border-radius: 4px;
    }

    .toast-close:hover {
        color: white;
        background: rgba(255, 255, 255, 0.1);
    }

    .toast-progress {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background: rgba(255, 255, 255, 0.2);
        transform-origin: left;
    }

    .toast-success .toast-progress {
        background: var(--accent, #10b981);
        opacity: 0.5;
    }
    .toast-error .toast-progress {
        background: #f87171;
        opacity: 0.5;
    }

    @keyframes toast-enter {
        from {
            opacity: 0;
            transform: translateY(1rem) scale(0.9);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    @keyframes toast-exit {
        from {
            opacity: 1;
            transform: scale(1);
        }
        to {
            opacity: 0;
            transform: scale(0.9);
        }
    }
</style>
