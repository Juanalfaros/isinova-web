<div id="cookie-banner" class="cookie-banner-tech hidden">
    <div class="cookie-content">
        <div class="icon-cookie">
            <i class="ph-fill ph-cookie"></i>
        </div>
        <div class="text-group">
            <h4>Control de Privacidad</h4>
            <p>
                Usamos cookies para mejorar la infraestructura y experiencia.
                Revisa nuestra <a href="/privacidad">Política de Privacidad</a>.
            </p>
        </div>
    </div>
    <div class="cookie-actions">
        <button id="btn-open-config" class="btn-ghost">Personalizar</button>
        <button id="btn-accept-all" class="btn-accent">
            Aceptar Todo
            <i class="ph-bold ph-check-circle"></i>
        </button>
    </div>
</div>

<div id="cookie-modal" class="cookie-modal-backdrop hidden">
    <div class="cookie-modal-panel">
        <div class="modal-header">
            <h3>Preferencias de Privacidad</h3>
            <button id="btn-close-modal" class="close-icon" aria-label="Cerrar">
                <i class="ph-bold ph-x"></i>
            </button>
        </div>

        <div class="modal-body">
            <p class="modal-desc">
                Gestiona tus preferencias de consentimiento. Puedes aceptar todo,
                rechazar las no esenciales o elegir específicamente cuáles permitir.
            </p>

            <div class="cookie-option">
                <div class="option-info">
                    <span class="option-title"
                        >Esenciales (Infraestructura)</span
                    >
                    <span class="option-desc"
                        >Seguridad, balanceo de carga y sesión.</span
                    >
                </div>
                <div class="toggle-wrapper">
                    <input
                        type="checkbox"
                        id="check-essential"
                        checked
                        disabled
                    />
                    <label for="check-essential" class="toggle-switch disabled"
                    ></label>
                </div>
            </div>

            <div class="cookie-option">
                <div class="option-info">
                    <span class="option-title">Analítica y Rendimiento</span>
                    <span class="option-desc"
                        >Nos ayuda a medir tráfico y mejorar la UX.</span
                    >
                </div>
                <div class="toggle-wrapper">
                    <input type="checkbox" id="check-analytics" />
                    <label for="check-analytics" class="toggle-switch"></label>
                </div>
            </div>

            <div class="cookie-option">
                <div class="option-info">
                    <span class="option-title">Marketing</span>
                    <span class="option-desc"
                        >Para mostrarte contenido relevante.</span
                    >
                </div>
                <div class="toggle-wrapper">
                    <input type="checkbox" id="check-marketing" />
                    <label for="check-marketing" class="toggle-switch"></label>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button id="btn-reject-all" class="btn-text-ghost">
                Rechazar Todo
            </button>
            <button id="btn-save-prefs" class="btn-accent">
                Guardar Selección
            </button>
        </div>
    </div>
</div>

<script>
    /* --- LÓGICA JAVASCRIPT MEJORADA --- */

    // Type definitions for GTM
    declare global {
        interface Window {
            gtag: (...args: any[]) => void;
            dataLayer: any[];
        }
    }

    const STORAGE_KEY = "isinova_consent_status";
    const PREFS_KEY = "isinova_consent_prefs";

    document.addEventListener("astro:page-load", () => {
        // Elementos del DOM
        const banner = document.getElementById("cookie-banner");
        const modal = document.getElementById("cookie-modal");

        // Botones Banner
        const btnOpenConfig = document.getElementById("btn-open-config");
        const btnAcceptAll = document.getElementById("btn-accept-all");

        // Botones Modal
        const btnCloseModal = document.getElementById("btn-close-modal");
        const btnSavePrefs = document.getElementById("btn-save-prefs");
        const btnRejectAll = document.getElementById("btn-reject-all"); // Nuevo

        // Checkboxes
        const checkAnalytics = document.getElementById(
            "check-analytics",
        ) as HTMLInputElement;
        const checkMarketing = document.getElementById(
            "check-marketing",
        ) as HTMLInputElement;

        // 1. INICIALIZACIÓN
        const hasConsent = localStorage.getItem(STORAGE_KEY);

        if (!hasConsent) {
            setTimeout(() => {
                banner?.classList.remove("hidden");
                banner?.classList.add("visible");
            }, 1000);
        } else {
            loadSwitchState();
            // Restaurar consentimiento en GTM (Hit en cada navegación)
            const storedPrefs = localStorage.getItem(PREFS_KEY);
            if (storedPrefs && typeof window.gtag === "function") {
                const prefs = JSON.parse(storedPrefs);
                updateGTM(prefs);
            }
        }

        // --- FUNCIONES ---

        function updateGTM(prefs: any) {
            window.gtag("consent", "update", {
                ad_storage: prefs.marketing ? "granted" : "denied",
                ad_user_data: prefs.marketing ? "granted" : "denied",
                ad_personalization: prefs.marketing ? "granted" : "denied",
                analytics_storage: prefs.analytics ? "granted" : "denied",
            });
        }

        function closeBanner() {
            banner?.classList.remove("visible");
            setTimeout(() => {
                banner?.classList.add("hidden");
            }, 400);
        }

        function openModal() {
            modal?.classList.remove("hidden");
            // UX Fix: Bloquear scroll del fondo
            document.body.style.overflow = "hidden";
            requestAnimationFrame(() => {
                modal?.classList.add("open");
            });
        }

        function closeModal() {
            modal?.classList.remove("open");
            // UX Fix: Restaurar scroll
            document.body.style.overflow = "";
            setTimeout(() => {
                modal?.classList.add("hidden");
            }, 300);
        }

        function saveConsent(type: "all" | "custom" | "reject") {
            let prefs = {
                essential: true,
                analytics: false,
                marketing: false,
            };

            if (type === "all") {
                prefs.analytics = true;
                prefs.marketing = true;
                localStorage.setItem(STORAGE_KEY, "accepted_all");
            } else if (type === "reject") {
                // Forzamos todo a false (excepto esencial)
                prefs.analytics = false;
                prefs.marketing = false;
                // Visualmente apagamos los switches si el modal sigue abierto
                if (checkAnalytics) checkAnalytics.checked = false;
                if (checkMarketing) checkMarketing.checked = false;
                localStorage.setItem(STORAGE_KEY, "rejected_all");
            } else {
                // Custom
                prefs.analytics = checkAnalytics?.checked || false;
                prefs.marketing = checkMarketing?.checked || false;
                localStorage.setItem(STORAGE_KEY, "custom");
            }

            localStorage.setItem(PREFS_KEY, JSON.stringify(prefs));

            if (typeof window.gtag === "function") {
                updateGTM(prefs);
                window.dataLayer = window.dataLayer || [];
                window.dataLayer.push({ event: "consent_updated" });
            }

            closeModal();
            closeBanner();
        }

        function loadSwitchState() {
            const storedPrefs = localStorage.getItem(PREFS_KEY);
            if (storedPrefs) {
                const prefs = JSON.parse(storedPrefs);
                if (checkAnalytics) checkAnalytics.checked = prefs.analytics;
                if (checkMarketing) checkMarketing.checked = prefs.marketing;
            }
        }

        // --- LISTENERS ---
        btnAcceptAll?.addEventListener("click", () => saveConsent("all"));
        btnOpenConfig?.addEventListener("click", openModal);
        btnCloseModal?.addEventListener("click", closeModal);
        btnSavePrefs?.addEventListener("click", () => saveConsent("custom"));
        btnRejectAll?.addEventListener("click", () => saveConsent("reject")); // Nuevo listener

        modal?.addEventListener("click", (e) => {
            if (e.target === modal) closeModal();
        });
    });
</script>

<style>
    /* --- 1. ESTILOS BASE (Iguales a tu versión original) --- */
    .cookie-banner-tech {
        position: fixed;
        bottom: 2rem;
        left: 2rem;
        right: auto;
        width: 100%;
        max-width: 400px;
        background: rgba(15, 23, 42, 0.95);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1.5rem;
        padding: 1.5rem;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        z-index: 9998;
        opacity: 0;
        transform: translateY(20px) scale(0.95);
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .cookie-banner-tech.visible {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
    .hidden {
        display: none !important;
    }

    /* Contenido */
    .cookie-content {
        display: flex;
        gap: 1rem;
        align-items: flex-start;
        margin-bottom: 1.2rem;
    }

    .icon-cookie {
        font-size: 1.8rem;
        color: var(--primary);
        background: rgba(99, 102, 241, 0.1);
        width: 44px;
        height: 44px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .text-group h4 {
        color: white;
        font-size: 0.95rem;
        font-weight: 600;
        margin: 0 0 0.25rem 0;
    }
    .text-group p {
        color: #94a3b8;
        font-size: 0.85rem;
        line-height: 1.5;
        margin: 0;
    }
    .text-group a {
        color: var(--accent);
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: border 0.3s;
    }
    .text-group a:hover {
        border-bottom-color: var(--accent);
    }

    .cookie-actions {
        display: flex;
        gap: 0.8rem;
        justify-content: flex-end;
    }

    /* Botones Banner */
    .btn-ghost {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #cbd5e1;
        padding: 0.5rem 1rem;
        border-radius: 0.75rem;
        font-size: 0.8rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
    }
    .btn-ghost:hover {
        background: rgba(255, 255, 255, 0.05);
        color: white;
        border-color: rgba(255, 255, 255, 0.2);
    }

    .btn-accent {
        background: var(--primary);
        color: white;
        border: none;
        padding: 0.5rem 1.2rem;
        border-radius: 0.75rem;
        font-size: 0.8rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        transition: all 0.2s;
    }
    .btn-accent:hover {
        background: #4f46e5;
        transform: translateY(-2px);
    }

    /* --- ESTILOS DEL MODAL --- */
    .cookie-modal-backdrop {
        position: fixed;
        inset: 0;
        background: rgba(5, 11, 20, 0.6);
        backdrop-filter: blur(4px);
        z-index: 10000;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    .cookie-modal-backdrop.open {
        opacity: 1;
    }
    .cookie-modal-panel {
        background: #0f172a;
        width: 100%;
        max-width: 500px;
        border-radius: 1.5rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.8);
        transform: scale(0.95);
        transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        overflow: hidden;
        margin: 1rem;
        display: flex;
        flex-direction: column;
        max-height: 90vh; /* Seguridad para pantallas chicas */
    }
    .cookie-modal-backdrop.open .cookie-modal-panel {
        transform: scale(1);
    }
    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }
    .modal-header h3 {
        color: white;
        font-size: 1.1rem;
        margin: 0;
    }
    .close-icon {
        background: transparent;
        border: none;
        color: #94a3b8;
        font-size: 1.2rem;
        cursor: pointer;
        padding: 0.2rem;
    }
    .modal-body {
        padding: 1.5rem;
        overflow-y: auto;
    }
    .modal-desc {
        color: #94a3b8;
        font-size: 0.9rem;
        line-height: 1.5;
        margin-bottom: 1.5rem;
    }
    .cookie-option {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: rgba(255, 255, 255, 0.03);
        padding: 1rem;
        border-radius: 1rem;
        margin-bottom: 0.8rem;
    }
    .option-info {
        display: flex;
        flex-direction: column;
        gap: 0.2rem;
    }
    .option-title {
        color: white;
        font-size: 0.95rem;
        font-weight: 600;
    }
    .option-desc {
        color: #64748b;
        font-size: 0.8rem;
    }

    /* Footer del Modal Actualizado */
    .modal-footer {
        padding: 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        background: rgba(0, 0, 0, 0.2);
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
    }

    /* Nuevo botón rechazar en modal */
    .btn-text-ghost {
        background: transparent;
        color: #94a3b8;
        border: none;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        font-weight: 500;
        cursor: pointer;
        transition: color 0.2s;
        border-radius: 0.75rem;
    }
    .btn-text-ghost:hover {
        color: #ef4444; /* Rojo suave al hover */
        background: rgba(239, 68, 68, 0.1);
    }

    /* Toggles */
    .toggle-wrapper {
        position: relative;
        width: 44px;
        height: 24px;
        flex-shrink: 0;
    }
    .toggle-wrapper input {
        opacity: 0;
        width: 0;
        height: 0;
    }
    .toggle-switch {
        position: absolute;
        cursor: pointer;
        inset: 0;
        background-color: #334155;
        border-radius: 34px;
        transition: 0.4s;
    }
    .toggle-switch:before {
        position: absolute;
        content: "";
        height: 18px;
        width: 18px;
        left: 3px;
        bottom: 3px;
        background-color: white;
        border-radius: 50%;
        transition: 0.4s;
    }
    input:checked + .toggle-switch {
        background-color: var(--accent);
    }
    input:checked + .toggle-switch:before {
        transform: translateX(20px);
    }
    .toggle-switch.disabled {
        cursor: not-allowed;
        opacity: 0.6;
    }
    input:disabled + .toggle-switch {
        background-color: #334155;
    }
    input:checked:disabled + .toggle-switch {
        background-color: #10b981;
    }

    /* ==========================================================
       OPTIMIZACIÓN MÓVIL
       ========================================================== */
    @media (max-width: 640px) {
        .cookie-banner-tech {
            left: 0.75rem;
            right: 0.75rem;
            bottom: 1rem;
            width: auto;
            max-width: none;
            padding: 1rem;
            border-radius: 1rem;
            background: rgba(15, 23, 42, 0.98);
        }

        .icon-cookie {
            display: none;
        }

        .cookie-content {
            margin-bottom: 0.8rem;
        }

        .text-group h4 {
            font-size: 0.9rem;
        }
        .text-group p {
            font-size: 0.8rem;
            line-height: 1.4;
        }

        .cookie-actions {
            display: grid;
            grid-template-columns: 1fr 1.5fr;
            gap: 0.75rem;
        }

        .btn-ghost,
        .btn-accent {
            width: 100%;
            padding: 0.6rem;
            font-size: 0.8rem;
        }

        /* Ajuste Modal Móvil */
        .cookie-modal-panel {
            margin: 0.5rem;
            width: 95%;
            height: auto;
            max-height: 85vh;
        }
        
        /* En móvil, los botones del footer del modal se apilan si es necesario o 50/50 */
        .modal-footer {
             display: grid;
             grid-template-columns: 1fr 1.5fr;
             gap: 0.8rem;
             padding: 1rem;
        }
        
        .btn-text-ghost {
            width: 100%;
            text-align: center;
            border: 1px solid rgba(255,255,255,0.1); /* Borde suave en móvil para que parezca botón */
        }
    }
</style>