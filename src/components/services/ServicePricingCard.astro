---
// src/components/services/ServicePricingCard.astro

interface Benefit {
    icon: string;
    text: string;
}

interface Props {
    title: string;
    subtitle: string;
    price: string;
    duration: string;
    benefits: Benefit[];
    buttonText: string;
    buttonHref?: string;
}

const {
    title,
    subtitle,
    price,
    duration,
    benefits,
    buttonText,
    buttonHref = "#contacto",
} = Astro.props;
---

<aside class="sidebar">
    <div class="pricing-card-sticky popular">
        <div class="popular-badge">
            <i class="ph-fill ph-star"></i> Recomendado
        </div>
        <div class="plan-header">
            <h3 class="plan-name">{title}</h3>
            <p class="plan-subtitle">{subtitle}</p>
        </div>

        <div class="divider"></div>

        <div class="plan-price">
            <span class="currency">Inversi√≥n estimada</span>
            <span class="amount">{price}</span>
            <span class="period">{duration}</span>
        </div>

        <ul class="plan-features">
            {
                benefits.map((b) => (
                    <li class="feature-item">
                        <i class="ph-fill ph-check-circle" />
                        <span>{b.text}</span>
                    </li>
                ))
            }
        </ul>

        <a href={buttonHref} class="btn-glow full-width">
            {buttonText}
            <i class="ph-bold ph-arrow-right"></i>
        </a>
    </div>
</aside>

<style>
    .sidebar {
        position: relative;
    }

    .pricing-card-sticky {
        position: sticky;
        top: 2rem;
        background: linear-gradient(
            180deg,
            rgba(98, 70, 234, 0.15) 0%,
            rgba(255, 255, 255, 0.02) 100%
        );
        border: 2px solid var(--primary);
        border-radius: 1.5rem;
        padding: 2rem;
        backdrop-filter: blur(10px);
        box-shadow: 0 20px 50px -10px rgba(0, 0, 0, 0.5);
    }

    .popular-badge {
        position: absolute;
        top: -14px;
        left: 50%;
        transform: translateX(-50%);
        background: var(--primary);
        color: white;
        padding: 6px 16px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        gap: 6px;
        box-shadow: 0 4px 15px rgba(98, 70, 234, 0.4);
        white-space: nowrap;
    }

    .plan-header {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .plan-name {
        font-size: 1.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 0.5rem;
    }

    .plan-subtitle {
        font-size: 0.9rem;
        color: #94a3b8;
        line-height: 1.4;
    }

    .divider {
        height: 1px;
        background: rgba(255, 255, 255, 0.1);
        margin: 1.5rem 0;
    }

    .plan-price {
        text-align: center;
        margin-bottom: 2rem;
    }

    .currency {
        display: block;
        font-size: 0.8rem;
        text-transform: uppercase;
        color: #94a3b8;
        margin-bottom: 0.25rem;
    }

    .amount {
        display: block;
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        line-height: 1;
        margin-bottom: 0.25rem;
    }

    .period {
        font-size: 0.9rem;
        color: var(--accent);
        font-weight: 600;
    }

    .plan-features {
        list-style: none;
        padding: 0;
        margin: 0 0 2rem;
    }

    .feature-item {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
        font-size: 0.9rem;
        color: #cbd5e1;
    }

    .feature-item i {
        color: var(--accent);
        font-size: 1.1rem;
        flex-shrink: 0;
    }

    .btn-glow {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        background: var(--primary);
        color: white;
        padding: 1rem 2rem;
        border-radius: 100px;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s;
        box-shadow: 0 0 20px rgba(99, 102, 241, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .btn-glow:hover {
        background: #4f46e5;
        box-shadow: 0 0 40px rgba(99, 102, 241, 0.6);
        transform: translateY(-2px);
    }

    .full-width {
        width: 100%;
    }
</style>
