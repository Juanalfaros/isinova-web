---
// src/components/services/ServicePainPoints.astro

interface PainItem {
    icon: string;
    text: string;
}

interface Props {
    badgeText: string;
    title: string;
    items: PainItem[];
}

const { badgeText, title, items } = Astro.props;
---

<section class="section-pain-points">
    <div class="container">
        <div class="section-header-center">
            <span class="section-badge primary">{badgeText}</span>
            <h2 class="section-title md">{title}</h2>
        </div>

        <div class="pain-grid">
            {
                items.map((item) => (
                    <div class="pain-card parent-hover">
                        <div class="icon-box pain md">
                            <i class={`ph-duotone ${item.icon}`} />
                        </div>
                        <p>{item.text}</p>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .section-pain-points {
        padding: 6rem 0;
    }

    .section-header-center {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 4rem;
    }

    .pain-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
    }

    .pain-card {
        background: white;
        padding: 2.5rem 2rem;
        border-radius: 1.5rem;
        border: 1px solid #e2e8f0;
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .pain-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px -5px rgba(99, 102, 241, 0.15);
        border-color: var(--primary);
    }

    .pain-card p {
        color: #64748b;
        line-height: 1.6;
        margin: 0;
    }
</style>
