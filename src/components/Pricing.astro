<style>
    /* --- Variables Locales Dark Mode --- */
    .pricing-section-dark {
        --bg-dark: #0b0f19; /* Fondo principal muy oscuro */
        --bg-card: rgba(255, 255, 255, 0.04); /* Superficie de tarjeta oscura */
        --bg-card-popular: linear-gradient(to bottom, rgba(98, 70, 234, 0.2) 0%, rgba(255, 255, 255, 0.04) 100%); /* Gradiente tarjeta popular */
        --text-heading: #ffffff;
        --text-body: #cbd5e1; /* Gris claro para lectura */
        --border-subtle: rgba(255, 255, 255, 0.1);

        padding: 6rem 0;
        background-color: var(--bg-dark);
        position: relative;
        color: var(--text-body);
    }

    /* Header */
    .section-header {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 4rem auto;
    }

    .badge-pricing {
        display: inline-block;
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--primary);
        background: rgba(98, 70, 234, 0.15);
        padding: 6px 14px;
        border-radius: 50px;
        margin-bottom: 1rem;
        border: 1px solid rgba(98, 70, 234, 0.2);
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--text-heading);
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    @media (min-width: 768px) {
        .section-title { font-size: 3rem; }
    }

    .text-gradient {
        background: linear-gradient(135deg, var(--primary), var(--accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .section-desc {
        font-size: 1.1rem;
        color: var(--text-body);
        line-height: 1.6;
    }

    /* Grid */
    .pricing-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        margin-bottom: 5rem;
        align-items: flex-start;
    }

    @media (min-width: 992px) {
        .pricing-grid {
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
        }
    }

    /* Cards Dark */
    .pricing-card {
        background: var(--bg-card);
        border-radius: 1.5rem;
        padding: 2.5rem 2rem;
        border: 1px solid var(--border-subtle);
        transition: all 0.3s ease;
        position: relative;
        display: flex;
        flex-direction: column;
        backdrop-filter: blur(10px); /* Efecto sutil de profundidad */
    }

    .pricing-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.5);
        border-color: rgba(98, 70, 234, 0.5);
        background: rgba(255, 255, 255, 0.06);
    }

    .pricing-card.popular {
        border: 2px solid var(--primary);
        background: var(--bg-card-popular);
        box-shadow: 0 10px 30px -5px rgba(98, 70, 234, 0.2);
        transform: scale(1.05);
        z-index: 1;
    }
    
    .pricing-card.popular:hover {
        transform: scale(1.05) translateY(-8px);
        box-shadow: 0 25px 50px -10px rgba(98, 70, 234, 0.3);
    }

    /* Popular Badge */
    .popular-badge {
        position: absolute;
        top: -16px;
        left: 50%;
        transform: translateX(-50%);
        background: var(--primary);
        color: white;
        padding: 0.5rem 1.25rem;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        white-space: nowrap;
        box-shadow: 0 4px 15px rgba(98, 70, 234, 0.5);
    }

    .plan-header { text-align: center; margin-bottom: 1.5rem; }
    .plan-name { font-size: 1.75rem; font-weight: 800; color: var(--text-heading); margin-bottom: 0.5rem; }
    .plan-subtitle { font-size: 0.9rem; color: var(--text-body); line-height: 1.5; min-height: 2.7em; }

    .plan-price { text-align: center; margin-bottom: 1.5rem; }
    .currency { display: block; font-size: 0.8rem; color: var(--text-body); font-weight: 600; text-transform: uppercase; margin-bottom: 0.25rem; }
    .amount { display: block; font-size: 2.5rem; font-weight: 900; color: var(--text-heading); line-height: 1; margin-bottom: 0.25rem; }
    .period { font-size: 0.85rem; color: var(--text-body); font-weight: 500; }

    .divider { height: 1px; background: var(--border-subtle); margin-bottom: 1.5rem; width: 100%; }

    /* Features Dark */
    .plan-features { list-style: none; padding: 0; margin: 0 0 2rem 0; flex-grow: 1; }
    .feature-item {
        display: flex; align-items: flex-start; gap: 0.75rem;
        margin-bottom: 0.85rem; font-size: 0.95rem; color: var(--text-body);
    }
    .feature-item i { font-size: 1.2rem; flex-shrink: 0; margin-top: 2px; color: var(--accent); }
    .feature-item.disabled { opacity: 0.5; text-decoration: line-through; }
    .feature-item.disabled i { color: #64748b; }
    .feature-item strong { font-weight: 700; color: var(--text-heading); }

    /* Botones Dark */
    .btn-plan {
        display: flex; align-items: center; justify-content: center; gap: 0.5rem;
        width: 100%; padding: 0.85rem 1.5rem; border-radius: 0.75rem;
        font-weight: 700; text-decoration: none; transition: all 0.3s ease;
        background: transparent; color: var(--text-heading); border: 1px solid var(--border-subtle);
    }
    .btn-plan:hover { border-color: var(--text-heading); background: rgba(255,255,255,0.05); }

    .btn-plan.primary {
        background: var(--primary); color: white; border: none;
        box-shadow: 0 4px 15px rgba(98, 70, 234, 0.3);
    }
    .btn-plan.primary:hover {
        background: #4f38ca;
        box-shadow: 0 8px 25px rgba(98, 70, 234, 0.5);
    }

    /* Addons Dark */
    .addons-section { margin-bottom: 4rem; }
    .addons-title { text-align: center; font-size: 1.5rem; font-weight: 700; color: var(--text-heading); margin-bottom: 2rem; }

    .addons-grid {
        display: grid; grid-template-columns: 1fr; gap: 1.5rem;
    }
    @media (min-width: 768px) { .addons-grid { grid-template-columns: repeat(3, 1fr); } }

    .addon-card {
        background: var(--bg-card); border: 1px solid var(--border-subtle); border-radius: 1rem;
        padding: 1.5rem; display: flex; flex-direction: column; align-items: center; text-align: center;
        transition: all 0.3s ease;
    }
    .addon-card:hover { transform: translateY(-5px); border-color: var(--accent); background: rgba(255,255,255,0.06); }

    .addon-icon {
        width: 50px; height: 50px; background: rgba(98, 70, 234, 0.1); border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        font-size: 1.5rem; color: var(--primary); margin-bottom: 1rem;
    }
    .addon-info h4 { font-size: 1.1rem; font-weight: 700; color: var(--text-heading); margin-bottom: 0.5rem; }
    .addon-info p { font-size: 0.9rem; color: var(--text-body); margin-bottom: 1rem; line-height: 1.4; }
    .addon-price { font-weight: 700; color: var(--accent); background: rgba(0, 255, 140, 0.1); padding: 4px 12px; border-radius: 20px; font-size: 0.85rem; }

    /* FAQ Simple Dark */
    .pricing-faq-container {
        background: rgba(255, 255, 255, 0.03); /* Ligeramente más claro que el fondo */
        border-radius: 1.5rem; padding: 3rem 2rem;
        border: 1px solid var(--border-subtle);
        max-width: 900px; margin: 0 auto;
    }
    .faq-content h3 { text-align: center; font-size: 1.5rem; font-weight: 700; margin-bottom: 2rem; color: var(--text-heading); }
    
    .faq-list {
        display: grid; grid-template-columns: 1fr; gap: 2rem;
    }
    @media (min-width: 768px) { .faq-list { grid-template-columns: repeat(3, 1fr); gap: 3rem; } }

    .faq-item-simple strong { display: block; font-size: 1rem; margin-bottom: 0.5rem; color: var(--accent); }
    .faq-item-simple p { font-size: 0.9rem; color: var(--text-body); line-height: 1.6; margin: 0; }
</style>