---
import Logo from "./Logo.astro";
---

<header id="site-header" class="site-header">
    <div class="top-bar">
        <div class="container top-bar-inner">
            <div class="contact-info">
                <a href="mailto:contacto@isinova.cl" class="top-link">
                    <i class="ph-fill ph-envelope-simple"></i>
                    <span>contacto@isinova.cl</span>
                </a>
            </div>
            <div class="client-area">
                <a href="#" class="top-link highlight">
                    <i class="ph-bold ph-user-circle"></i>
                    <span>Portal Clientes</span>
                </a>
            </div>
        </div>
    </div>

    <div class="main-bar">
        <div class="container nav-container">
            <a href="/" class="logo-wrapper" aria-label="Inicio">
                <Logo variant="normal" className="header-logo" />
            </a>

            <nav class="desktop-nav">
                <a href="#inicio" class="nav-item">Inicio</a>
                <a href="#servicios" class="nav-item">Servicios</a>
                <a href="#metodologia" class="nav-item">Metodología</a>
                <a href="#nosotros" class="nav-item">Nosotros</a>
            </nav>

            <div class="desktop-cta">
                <a href="#contacto" class="btn-primary-sm"> ¡Hablemos Hoy! </a>
            </div>

            <button
                id="open-menu-top"
                class="hamburger-btn"
                aria-label="Abrir menú"
            >
                <i class="ph ph-list"></i>
            </button>
        </div>
    </div>
</header>

<div id="mobile-overlay" class="mobile-overlay"></div>

<aside id="mobile-drawer" class="mobile-drawer">
    <div class="drawer-header">
        <div class="drawer-logo">
            <Logo variant="normal" className="header-logo" />
        </div>
        <button id="close-menu" class="close-btn" aria-label="Cerrar menú">
            <i class="ph ph-x"></i>
        </button>
    </div>

    <div class="drawer-content">
        <nav class="drawer-nav">
            <a href="#inicio" class="drawer-link" style="--i:1">
                <span class="link-text">Inicio</span>
                <i class="ph-bold ph-arrow-right link-icon"></i>
            </a>
            <a href="#servicios" class="drawer-link" style="--i:2">
                <span class="link-text">Soluciones</span>
                <i class="ph-bold ph-arrow-right link-icon"></i>
            </a>
            <a href="#metodologia" class="drawer-link" style="--i:3">
                <span class="link-text">Metodología</span>
                <i class="ph-bold ph-arrow-right link-icon"></i>
            </a>
            <a href="#nosotros" class="drawer-link" style="--i:4">
                <span class="link-text">Nosotros</span>
                <i class="ph-bold ph-arrow-right link-icon"></i>
            </a>
            <a href="#contacto" class="drawer-link highlight" style="--i:5">
                <span class="link-text">Contacto</span>
                <i class="ph-bold ph-arrow-right link-icon"></i>
            </a>
        </nav>

        <div class="drawer-footer" style="--i:6">
            <a href="#contacto" class="btn-drawer-full">
                Solicitar Auditoría Gratis
            </a>
            <div class="drawer-socials">
                <a href="#"><i class="ph-fill ph-linkedin-logo"></i></a>
                <a href="#"><i class="ph-fill ph-instagram-logo"></i></a>
                <a href="#"><i class="ph-fill ph-whatsapp-logo"></i></a>
            </div>
        </div>
    </div>
</aside>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const header = document.getElementById("site-header");
        const openBtnTop = document.getElementById("open-menu-top");
        const closeBtn = document.getElementById("close-menu");
        const overlay = document.getElementById("mobile-overlay");
        const drawer = document.getElementById("mobile-drawer");
        const drawerLinks = document.querySelectorAll(
            ".drawer-link, .btn-drawer-full",
        );

        // --- Scroll Logic ---
        const handleScroll = () => {
            if (window.scrollY > 20) {
                header?.classList.add("scrolled");
            } else {
                header?.classList.remove("scrolled");
            }
        };
        window.addEventListener("scroll", handleScroll, { passive: true });

        // --- Menu Logic ---
        function toggleMenu(show: boolean) {
            if (show) {
                overlay?.classList.add("is-active");
                drawer?.classList.add("is-active");
                document.body.style.overflow = "hidden";
            } else {
                overlay?.classList.remove("is-active");
                drawer?.classList.remove("is-active");
                document.body.style.overflow = "";
            }
        }

        openBtnTop?.addEventListener("click", () => toggleMenu(true));
        closeBtn?.addEventListener("click", () => toggleMenu(false));
        overlay?.addEventListener("click", () => toggleMenu(false));

        drawerLinks.forEach((link) => {
            link.addEventListener("click", () => toggleMenu(false));
        });
    });
</script>

<style>
    /* --- CORE HEADER STYLES --- */
    .site-header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        transition: transform 0.3s ease;
    }

    /* 1. Top Bar */
    .top-bar {
        background-color: var(--dark);
        color: rgba(255, 255, 255, 0.8);
        height: 40px;
        overflow: hidden;
        transition:
            height 0.3s ease,
            opacity 0.3s ease;
    }

    .top-bar-inner {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 100%;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .top-link {
        display: flex;
        align-items: center;
        gap: 6px;
        color: inherit;
        text-decoration: none;
        transition: color 0.2s;
    }
    .top-link:hover,
    .top-link.highlight {
        color: var(--accent);
    }

    /* Hide Top Bar on Scroll */
    .site-header.scrolled .top-bar {
        height: 0;
        opacity: 0;
    }

    /* 2. Main Navbar */
    .main-bar {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        height: 80px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

    .site-header.scrolled .main-bar {
        height: 70px;
        background: rgba(255, 255, 255, 0.95);
        box-shadow: 0 4px 20px -5px rgba(0, 0, 0, 0.1);
    }

    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 100%;
    }

    .logo-wrapper {
        height: 40px;
        display: flex;
        align-items: center;
    }
    .header-logo {
        height: 100%;
        width: auto;
    }

    /* Desktop Nav */
    .desktop-nav {
        display: none;
        gap: 2.5rem;
    }

    .nav-item {
        color: var(--dark);
        font-weight: 600;
        text-decoration: none;
        font-size: 0.95rem;
        position: relative;
        padding: 0.5rem 0;
    }

    .nav-item::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background: var(--primary);
        transition: all 0.3s ease;
        transform: translateX(-50%);
    }
    .nav-item:hover {
        color: var(--primary);
    }
    .nav-item:hover::after {
        width: 100%;
    }

    .desktop-cta {
        display: none;
    }
    .btn-primary-sm {
        background: var(--primary);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 700;
        text-decoration: none;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(98, 70, 234, 0.2);
    }
    .btn-primary-sm:hover {
        background: var(--dark);
        transform: translateY(-2px);
    }

    /* Mobile Toggle Button */
    .hamburger-btn {
        background: transparent;
        border: none;
        font-size: 1.75rem;
        color: var(--dark);
        cursor: pointer;
        padding: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @media (min-width: 992px) {
        .desktop-nav {
            display: flex;
        }
        .desktop-cta {
            display: block;
        }
        .hamburger-btn {
            display: none;
        }
    }

    /* --- MOBILE DRAWER (MODERNO) --- */
    .mobile-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.6);
        z-index: 1100;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.4s ease;
        backdrop-filter: blur(4px);
    }
    .mobile-overlay.is-active {
        opacity: 1;
        visibility: visible;
    }

    .mobile-drawer {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        max-width: 380px;
        background: white;
        z-index: 1200;
        transform: translateX(100%);
        transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        display: flex;
        flex-direction: column;
        box-shadow: -10px 0 30px rgba(0, 0, 0, 0.1);
    }
    .mobile-drawer.is-active {
        transform: translateX(0);
    }

    .drawer-header {
        padding: 1.5rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #f1f5f9;
    }

    .close-btn {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        background: #f8fafc;
        border: none;
        color: var(--dark);
        font-size: 1.25rem;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .close-btn:hover {
        background: #e2e8f0;
        color: var(--primary);
    }

    .drawer-content {
        flex: 1;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
    }

    .drawer-nav {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .drawer-link {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--dark);
        text-decoration: none;
        padding: 0.75rem 0;
        border-bottom: 1px solid transparent;
        transition: all 0.3s ease;

        /* Animación de entrada */
        opacity: 0;
        transform: translateX(20px);
        transition-delay: calc(0.05s * var(--i));
    }

    .mobile-drawer.is-active .drawer-link {
        opacity: 1;
        transform: translateX(0);
    }

    .drawer-link:hover {
        color: var(--primary);
        padding-left: 10px;
    }
    .drawer-link.highlight {
        color: var(--primary);
    }

    .link-icon {
        font-size: 1.25rem;
        opacity: 0;
        transition: opacity 0.2s;
    }
    .drawer-link:hover .link-icon {
        opacity: 1;
    }

    .drawer-footer {
        margin-top: auto;
        padding-top: 3rem;
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.4s ease 0.4s;
    }
    .mobile-drawer.is-active .drawer-footer {
        opacity: 1;
        transform: translateY(0);
    }

    .btn-drawer-full {
        display: flex;
        justify-content: center;
        align-items: center;
        background: var(--dark);
        color: white;
        padding: 1.2rem;
        border-radius: 1rem;
        font-weight: 700;
        text-decoration: none;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .drawer-socials {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
    }
    .drawer-socials a {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #f1f5f9;
        color: var(--dark);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        text-decoration: none;
        transition: all 0.2s;
    }
    .drawer-socials a:hover {
        background: var(--primary);
        color: white;
    }
</style>
