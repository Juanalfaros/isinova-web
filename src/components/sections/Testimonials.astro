<style>
    /* VARIABLES LOCALES */
    .simple-testimonials {
        --bg-section: #f8fafc;
        --bg-card: #ffffff;
        --text-main: #0f172a;
        --text-muted: #64748b;
        --primary: #6246ea;
        --star-color: #f59e0b;

        padding: 5rem 0;
        background-color: var(--bg-section);
    }

    .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    /* HEADER */
    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-subtitle {
        font-size: 1.1rem;
        color: var(--text-muted);
        margin: 0;
    }

    /* GRID */
    .testimonials-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        margin-bottom: 4rem; /* Más espacio para separar del CTA final */
    }

    @media (min-width: 768px) {
        .testimonials-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    /* TARJETAS */
    .review-card {
        background: var(--bg-card);
        border: 1px solid #e2e8f0;
        border-radius: 16px;
        padding: 1.75rem;
        display: flex;
        flex-direction: column;
        transition:
            transform 0.2s ease,
            box-shadow 0.2s ease;
    }

    .review-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px -10px rgba(0, 0, 0, 0.08);
        border-color: rgba(98, 70, 234, 0.2);
    }

    .stars {
        color: var(--star-color);
        font-size: 0.9rem;
        margin-bottom: 1rem;
        display: flex;
        gap: 2px;
    }

    .review-text {
        font-size: 0.95rem;
        line-height: 1.6;
        color: var(--text-main);
        font-style: italic;
        margin: 0 0 1.5rem 0;
        flex-grow: 1;
    }

    .review-author {
        margin-top: auto;
        padding-top: 1rem;
        border-top: 1px solid #f1f5f9;
    }

    .review-author strong {
        display: block;
        font-size: 0.9rem;
        color: var(--text-main);
        font-weight: 700;
    }

    .review-author span {
        display: block;
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    /* --- CTA AREA ACTUALIZADA --- */
    .section-cta {
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .cta-label {
        font-size: 0.9rem;
        color: var(--text-muted);
        margin: 0;
        font-weight: 500;
    }

    .btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background-color: var(--text-main);
        color: white;
        padding: 1rem 2rem; /* Botón un poco más grande */
        border-radius: 50px;
        font-weight: 700;
        font-size: 1rem;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px -2px rgba(0, 0, 0, 0.1);
    }

    .btn-primary:hover {
        background-color: var(--primary);
        transform: translateY(-2px);
        box-shadow: 0 10px 20px -5px rgba(98, 70, 234, 0.4);
    }
</style>
