<header id="inicio" class="hero-wrapper-dark">
    <!-- Fondos decorativos (Ocultos para tecnologías de asistencia) -->
    <div class="hero-glow glow-1" aria-hidden="true"></div>
    <div class="hero-glow glow-2" aria-hidden="true"></div>
    <div class="bg-pattern" aria-hidden="true"></div>

    <div class="container relative-z">
        <div class="hero-grid">
            <div class="hero-text-content">
                <div class="hero-badge">
                    <span class="pulse-dot" aria-hidden="true"></span>
                    <span>Ingeniería EdTech & Consultoría</span>
                </div>

                <h1 class="section-title lg on-dark">
                    Desarrollo de <span
                        class="text-span gradient highlight-brand accent"
                        >Plataformas LMS</span
                    > y Software Educativo
                </h1>

                <p class="hero-description">
                    Especialistas en arquitectura de aprendizaje digital.
                    Implementamos <strong>Moodle y Canvas</strong> de alto rendimiento,
                    o desarrollamos ecosistemas a medida con <strong
                        >Astro y Headless CMS</strong
                    >. Infraestructura escalable para instituciones que no
                    pueden fallar.
                </p>

                <div class="hero-buttons">
                    <a href="/contacto" class="btn btn-primary">
                        Agendar Evaluación Técnica
                        <i class="ph-bold ph-chats-circle" aria-hidden="true"
                        ></i>
                    </a>
                    <a href="#servicios" class="btn-text-light">
                        Ver Stack Tecnológico
                        <i class="ph-bold ph-arrow-down" aria-hidden="true"></i>
                    </a>
                </div>

                <aside class="hero-trust" aria-label="Nuestra trayectoria">
                    <div class="avatar-group" aria-hidden="true">
                        <div class="avatar">Is</div>
                        <div class="avatar">Uc</div>
                        <div class="avatar">Du</div>
                    </div>
                    <p>
                        Soporte crítico para <strong>+50.000 alumnos</strong> activos
                    </p>
                </aside>
            </div>

            <!-- Contenido Visual (Decorativo/Informativo) -->
            <div class="hero-visual-content" aria-hidden="true">
                <div class="visual-playground">
                    <div class="data-core-pulse"></div>
                    <div class="data-core-gradient"></div>

                    <svg
                        class="connection-lines"
                        viewBox="0 0 500 420"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            d="M250 210 C 300 210, 350 100, 420 60"
                            stroke="url(#line-gradient)"
                            stroke-width="1.5"
                            stroke-dasharray="4 4"
                            class="animated-path"></path>
                        <path
                            d="M250 210 C 200 250, 100 350, 40 380"
                            stroke="url(#line-gradient)"
                            stroke-width="1.5"
                            stroke-dasharray="4 4"
                            class="animated-path delay"></path>
                        <defs>
                            <linearGradient
                                id="line-gradient"
                                x1="0%"
                                y1="0%"
                                x2="100%"
                                y2="0%"
                            >
                                <stop
                                    offset="0%"
                                    stop-color="rgba(98, 70, 234, 0)"></stop>
                                <stop
                                    offset="50%"
                                    stop-color="rgba(98, 70, 234, 0.6)"></stop>
                                <stop
                                    offset="100%"
                                    stop-color="rgba(0, 255, 140, 0.6)"></stop>
                            </linearGradient>
                        </defs>
                    </svg>

                    <!-- Stats Cards (Marcadas como decorativas al estar dentro del contenedor visual aria-hidden) -->
                    <div
                        class="glass-card-dark premium card-main animate-float-center"
                    >
                        <div class="shine-effect"></div>
                        <div class="card-header">
                            <span class="dot red"></span>
                            <span class="dot yellow"></span>
                            <span class="dot green"></span>
                        </div>
                        <div class="card-body">
                            <div class="bars">
                                <div class="bar" style="height: 40%"></div>
                                <div class="bar" style="height: 60%"></div>
                                <div class="bar" style="height: 45%"></div>
                                <div
                                    class="bar active super-glow"
                                    style="height: 100%"
                                >
                                    <div class="bar-particles"></div>
                                </div>
                            </div>
                            <div class="data">
                                <strong>Performance</strong>
                                <span class="trend" style="color: #00ff8c;"
                                    >99/100 Google</span
                                >
                            </div>
                        </div>
                    </div>

                    <div
                        class="glass-card-dark premium card-status animate-float-delay"
                    >
                        <div class="icon-square success">
                            <i class="ph-bold ph-hard-drives"></i>
                        </div>
                        <div class="card-mini-text">
                            <strong>Uptime SLA</strong>
                            <span>99.99% Garantizado</span>
                        </div>
                    </div>

                    <div
                        class="glass-card-dark premium card-users animate-float"
                    >
                        <div class="icon-square primary">
                            <i class="ph-bold ph-users-three"></i>
                        </div>
                        <div class="card-mini-text">
                            <strong>Concurrencia</strong>
                            <span>+5k Usuarios/seg</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<style>
    /* --- ESTRUCTURA PRINCIPAL --- */
    .hero-wrapper-dark {
        position: relative;
        padding: 8rem 0;
        overflow: hidden;
        width: 100%;
        background-color: #0b0f19;
        color: #e2e8f0;
        margin-top: 120px;
    }

    @media (max-width: 991px) {
        .hero-wrapper-dark {
            padding: 4rem 0;
            margin-top: 60px;
        }
    }

    .relative-z {
        position: relative;
        z-index: 10;
    }

    .hero-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 4rem;
        align-items: center;
    }

    @media (min-width: 992px) {
        .hero-grid {
            grid-template-columns: 1.1fr 0.9fr;
        }
    }

    /* Glows ambientales */
    .hero-glow {
        position: absolute;
        width: 600px;
        height: 600px;
        border-radius: 50%;
        filter: blur(120px); /* Más blur para suavidad */
        opacity: 0.12;
        z-index: 0;
        pointer-events: none;
    }
    .glow-1 {
        background: var(--primary);
        top: -25%;
        left: -10%;
    }
    .glow-2 {
        background: var(--accent);
        bottom: -15%;
        right: -10%;
    }

    .bg-pattern {
        position: absolute;
        inset: 0;
        background-image: radial-gradient(
            rgba(255, 255, 255, 0.03) 1px,
            transparent 1px
        );
        background-size: 40px 40px;
        opacity: 0.6;
        pointer-events: none;
        mask-image: radial-gradient(
            circle at center,
            black 40%,
            transparent 100%
        ); /* Vignette para el patrón */
    }

    /* --- TEXTO (IZQUIERDA) --- */
    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.6rem 1.2rem;
        background: rgba(98, 70, 234, 0.1);
        color: #e0d4fc;
        border-radius: 100px;
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 2rem;
        border: 1px solid rgba(98, 70, 234, 0.25);
        backdrop-filter: blur(5px);
    }

    .pulse-dot {
        width: 8px;
        height: 8px;
        background: var(--accent);
        border-radius: 50%;
        box-shadow: 0 0 0 2px rgba(0, 255, 140, 0.2);
        animation: pulse-badge 2s infinite;
    }
    @keyframes pulse-badge {
        0% {
            box-shadow: 0 0 0 0 rgba(0, 255, 140, 0.4);
        }
        70% {
            box-shadow: 0 0 0 6px rgba(0, 255, 140, 0);
        }
        100% {
            box-shadow: 0 0 0 0 rgba(0, 255, 140, 0);
        }
    }

    .hero-title {
        font-size: 2.75rem;
        line-height: 1.1;
        font-weight: 800;
        color: #ffffff;
        margin-bottom: 1.5rem;
        letter-spacing: -0.03em;
    }

    .hero-title .accent {
        background: linear-gradient(90deg, #00ff8c 0%, #6246ea 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        position: relative;
        white-space: nowrap;
    }

    @media (min-width: 768px) {
        .hero-title {
            font-size: 4rem;
        }
    }

    .hero-description {
        font-size: 1.125rem;
        color: #94a3b8;
        line-height: 1.7;
        margin-bottom: 3rem;
        max-width: 600px;
    }
    .hero-description strong {
        color: #e2e8f0;
        font-weight: 600;
    }

    /* Botones */
    .hero-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 3.5rem;
    }

    @media (min-width: 640px) {
        .hero-buttons {
            flex-direction: row;
            align-items: center;
        }
    }

    .btn-primary {
        /* Asumiendo que tienes estilos globales, pero reforzamos aquí */
        background: var(--primary);
        color: white;
        padding: 0.9rem 1.8rem;
        border-radius: 0.75rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition:
            transform 0.2s,
            box-shadow 0.2s;
    }
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px -5px rgba(98, 70, 234, 0.4);
    }

    .btn-text-light {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: #cbd5e1;
        font-weight: 500;
        text-decoration: none;
        padding: 0.75rem 1.5rem;
        transition: all 0.2s;
        border-radius: 0.75rem;
    }
    .btn-text-light:hover {
        background: rgba(255, 255, 255, 0.05);
        color: white;
    }

    /* Trust */
    .hero-trust {
        display: flex;
        align-items: center;
        gap: 1.2rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.08);
    }
    .avatar-group {
        display: flex;
    }
    .avatar {
        width: 38px;
        height: 38px;
        background: #1e293b;
        border: 2px solid #0b0f19;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.7rem;
        font-weight: 700;
        color: #94a3b8;
        margin-left: -10px;
        transition: transform 0.2s;
    }
    .avatar:hover {
        transform: translateY(-3px);
        z-index: 2;
        border-color: var(--primary);
        color: white;
    }
    .avatar:first-child {
        margin-left: 0;
        background: var(--primary);
        color: white;
    }

    /* --- VISUAL (DERECHA) --- */
    .hero-visual-content {
        display: flex;
        justify-content: center;
        position: relative;
        perspective: 1000px;
    }
    .visual-playground {
        position: relative;
        width: 100%;
        max-width: 520px;
        height: 440px;
    }

    /* Animations & Cards (Mismo CSS base, ajustado para look Premium) */
    .data-core-pulse {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 350px;
        height: 350px;
        border-radius: 50%;
        background: radial-gradient(
            circle,
            rgba(98, 70, 234, 0.25) 0%,
            rgba(0, 0, 0, 0) 70%
        );
        animation: core-pulse 4s ease-in-out infinite;
    }
    .data-core-gradient {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 420px;
        height: 420px;
        border-radius: 50%;
        background: conic-gradient(
            from 180deg at 50% 50%,
            rgba(98, 70, 234, 0.05) 0deg,
            rgba(0, 255, 140, 0.05) 180deg,
            rgba(98, 70, 234, 0.05) 360deg
        );
        filter: blur(50px);
        animation: core-rotate 25s linear infinite;
    }
    @keyframes core-pulse {
        0%,
        100% {
            transform: translate(-50%, -50%) scale(0.9);
            opacity: 0.4;
        }
        50% {
            transform: translate(-50%, -50%) scale(1.1);
            opacity: 0.7;
        }
    }
    @keyframes core-rotate {
        from {
            transform: translate(-50%, -50%) rotate(0deg);
        }
        to {
            transform: translate(-50%, -50%) rotate(360deg);
        }
    }

    .connection-lines {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        pointer-events: none;
    }
    .animated-path {
        stroke-dasharray: 8, 8;
        animation: dash-flow 30s linear infinite;
        opacity: 0.6;
    }
    @keyframes dash-flow {
        to {
            stroke-dashoffset: -500;
        }
    }

    /* Glass Cards Styles */
    .glass-card-dark.premium {
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-top: 1px solid rgba(255, 255, 255, 0.25);
        border-left: 1px solid rgba(255, 255, 255, 0.25);
        box-shadow:
            0 25px 50px -12px rgba(0, 0, 0, 0.7),
            inset 0 0 20px rgba(255, 255, 255, 0.03);
        background: rgba(15, 23, 42, 0.65); /* Slate 900 con transparencia */
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border-radius: 1.25rem;
        position: absolute;
        z-index: 3;
        overflow: hidden;
    }

    .shine-effect {
        position: absolute;
        top: 0;
        left: -100%;
        width: 50%;
        height: 100%;
        background: linear-gradient(
            to right,
            transparent,
            rgba(255, 255, 255, 0.08),
            transparent
        );
        transform: skewX(-25deg);
        animation: shine-pass 6s ease-in-out infinite;
    }
    @keyframes shine-pass {
        0%,
        85% {
            left: -120%;
        }
        100% {
            left: 200%;
        }
    }

    .card-main {
        top: 50%;
        left: 50%;
        width: 260px;
        padding: 1.5rem;
        transform: translate(-50%, -50%);
    }
    .card-status {
        top: 15%;
        right: 5%;
        padding: 0.8rem 1.2rem;
        display: flex;
        align-items: center;
        gap: 12px;
    }
    .card-users {
        bottom: 15%;
        left: 0%;
        padding: 0.8rem 1.2rem;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    /* Contenido Cards */
    .card-header {
        display: flex;
        gap: 6px;
        margin-bottom: 1.5rem;
    }
    .dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        opacity: 0.8;
    }
    .red {
        background: #ef4444;
    }
    .yellow {
        background: #f59e0b;
    }
    .green {
        background: #10b981;
    }

    .card-body {
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
    }
    .bars {
        display: flex;
        gap: 6px;
        align-items: flex-end;
        height: 50px;
    }
    .bar {
        width: 10px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 3px;
    }
    .bar.active.super-glow {
        background: var(--accent);
        box-shadow: 0 0 15px var(--accent);
    }

    .data {
        text-align: right;
    }
    .data strong {
        font-size: 0.9rem;
        color: #cbd5e1;
        display: block;
        margin-bottom: 2px;
    }
    .trend {
        font-size: 0.95rem;
        font-weight: 700;
        text-shadow: 0 0 10px rgba(0, 255, 140, 0.4);
    }

    .icon-square {
        width: 42px;
        height: 42px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.4rem;
    }
    .icon-square.success {
        background: rgba(16, 185, 129, 0.15);
        color: #10b981;
        border: 1px solid rgba(16, 185, 129, 0.2);
    }
    .icon-square.primary {
        background: rgba(98, 70, 234, 0.15);
        color: #a78bfa;
        border: 1px solid rgba(98, 70, 234, 0.2);
    }

    .card-mini-text strong {
        display: block;
        font-size: 0.9rem;
        color: #e2e8f0;
    }
    .card-mini-text span {
        font-size: 0.75rem;
        color: #94a3b8;
    }

    /* Animaciones Flote */
    .animate-float {
        animation: float 7s ease-in-out infinite;
    }
    .animate-float-delay {
        animation: float 8s ease-in-out 2s infinite;
    }
    .animate-float-center {
        animation: float-center 9s ease-in-out infinite;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-12px);
        }
    }
    @keyframes float-center {
        0%,
        100% {
            transform: translate(-50%, -50%);
        }
        50% {
            transform: translate(-50%, -58%);
        }
    }
</style>
