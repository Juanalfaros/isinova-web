<style>
    /* Estilos Generales de la Sección */
    .testimonials-section {
        padding: 6rem 0;
        background: linear-gradient(to bottom, #ffffff 0%, #f8fafc 100%);
        position: relative;
    }

    /* Header */
    .section-header {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 4rem auto;
    }

    .badge-testimonials {
        display: inline-block;
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--accent);
        background: rgba(0, 255, 140, 0.1);
        padding: 6px 14px;
        border-radius: 50px;
        margin-bottom: 1rem;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--dark);
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    @media (min-width: 768px) {
        .section-title { font-size: 3rem; }
    }

    .text-gradient {
        background: linear-gradient(135deg, var(--primary), var(--accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .section-desc {
        font-size: 1.1rem;
        color: var(--slate);
        line-height: 1.6;
    }

    /* Logos de Clientes */
    .clients-logos {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
        margin-bottom: 4rem;
        padding: 2rem 0;
    }

    @media (min-width: 640px) {
        .clients-logos { grid-template-columns: repeat(4, 1fr); }
    }

    .logo-item {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .logo-placeholder {
        padding: 1rem 1.5rem;
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 0.75rem;
        color: var(--slate);
        font-weight: 600;
        font-size: 0.9rem;
        text-align: center;
        opacity: 0.7;
        transition: all 0.3s ease;
        width: 100%;
    }

    .logo-placeholder:hover {
        opacity: 1;
        border-color: var(--primary);
        transform: translateY(-2px);
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
    }

    /* Grid de Testimonios */
    .testimonials-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        margin-bottom: 4rem;
    }

    @media (min-width: 768px) {
        .testimonials-grid { grid-template-columns: repeat(2, 1fr); }
    }

    @media (min-width: 1024px) {
        .testimonials-grid { grid-template-columns: 2fr 1fr 1fr; }
    }

    /* Tarjetas de Testimonio */
    .testimonial-card {
        background: white;
        padding: 2rem;
        border-radius: 1.5rem;
        border: 1px solid #e2e8f0;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    .testimonial-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        border-color: rgba(98, 70, 234, 0.3);
    }

    /* Tarjeta Destacada */
    .testimonial-card.featured {
        background: linear-gradient(135deg, #f0ecfe 0%, #e0f2fe 100%);
        border-color: var(--primary);
        grid-row: span 2; /* Ocupa 2 filas en pantallas grandes */
    }

    @media (max-width: 1023px) {
        .testimonial-card.featured { grid-row: span 1; }
    }

    .quote-icon {
        color: var(--primary);
        font-size: 2rem;
        margin-bottom: 1rem;
        opacity: 0.3;
    }

    .rating {
        display: flex;
        gap: 0.25rem;
        margin-bottom: 1rem;
    }

    .rating i { color: #fbbf24; font-size: 1rem; }

    .testimonial-text {
        font-size: 1.05rem;
        line-height: 1.7;
        color: var(--dark);
        margin: 0 0 1.5rem 0;
        font-style: italic;
        flex-grow: 1;
    }

    .author-info {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-top: auto;
    }

    .author-avatar {
        width: 50px; height: 50px;
        border-radius: 50%;
        background: var(--primary);
        color: white;
        display: flex; align-items: center; justify-content: center;
        font-weight: 700; font-size: 1.1rem;
        flex-shrink: 0;
    }

    .author-details h4 {
        font-size: 1rem; font-weight: 700; color: var(--dark);
        margin: 0 0 0.25rem 0;
    }

    .author-details p {
        font-size: 0.85rem; color: var(--slate); margin: 0;
    }

    /* Métricas (solo en featured) */
    .metrics {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
    }

    .metric-item { text-align: center; }

    .metric-value {
        display: block;
        font-size: 1.75rem;
        font-weight: 800;
        color: var(--primary);
        margin-bottom: 0.25rem;
    }

    .metric-label {
        display: block;
        font-size: 0.75rem;
        color: var(--slate);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* Stats Bar */
    .stats-bar {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        background: var(--dark);
        padding: 3rem 2rem;
        border-radius: 1.5rem;
        box-shadow: 0 20px 40px -5px rgba(0,0,0,0.2);
    }

    @media (min-width: 768px) {
        .stats-bar { grid-template-columns: repeat(3, 1fr); }
    }

    .stat-box {
        display: flex;
        align-items: center;
        gap: 1rem;
        color: white;
    }

    .stat-box i {
        font-size: 2.5rem;
        color: var(--accent);
        flex-shrink: 0;
    }

    .stat-content { display: flex; flex-direction: column; }

    .stat-number {
        font-size: 2rem;
        font-weight: 800;
        color: white;
        line-height: 1;
        margin-bottom: 0.25rem;
    }

    .stat-label {
        font-size: 0.85rem;
        color: #94a3b8;
        font-weight: 500;
    }
</style>