---
export const prerender = true;

import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import ServiceCTA from "../../components/services/ServiceCTA.astro";

// Static imports as a workaround for the mysterious glob bug
import imgLms from "../../assets/images/services/lms-isinova.webp";
import imgMigracion from "../../assets/images/services/migracion-isinova.webp";
import imgSoporte from "../../assets/images/services/soporte-isinova.webp";
import imgWeb from "../../assets/images/services/web-edtech-isinova.webp";

const imageMap: Record<string, any> = {
    "images/services/lms-isinova.webp": imgLms,
    "images/services/migracion-isinova.webp": imgMigracion,
    "images/services/soporte-isinova.webp": imgSoporte,
    "images/services/web-edtech-isinova.webp": imgWeb,
};

import { getCollection, render, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
    const services = await getCollection("servicios");
    return services.map((service: CollectionEntry<"servicios">) => ({
        params: { slug: service.slug },
        props: { service },
    }));
}

type Props = {
    service: CollectionEntry<"servicios">;
};

const { service } = Astro.props;
const { Content } = await render(service);
const data = service.data;

// Lógica de carga de imagen
const serviceImage = imageMap[data.heroImage] || imgLms;
---

<Layout title={`${data.title} | Isinova`} description={data.description}>
    <main class="service-page-main">
        <header class="service-hero bg-tech-dark">
            <div class="bg-base"></div>
            <div class="tech-grid-bg"></div>
            <div class="ambient-glow"></div>

            <div class="container relative-z">
                <div class="hero-layout">
                    <div class="hero-content">
                        <nav class="breadcrumb-badge">
                            <a href="/servicios">Servicios</a>
                            <i class="ph-bold ph-caret-right"></i>
                            <span class="current">{data.shortTitle}</span>
                        </nav>

                        <h1
                            class="hero-title"
                            transition:name={`service-title-${service.slug}`}
                        >
                            {data.title.split(" ").slice(0, -1).join(" ")}
                            <span class="highlight-brand accent"
                                >{data.title.split(" ").slice(-1)}</span
                            >
                        </h1>

                        <p class="hero-desc">{data.heroTitle}</p>

                        <div class="tags-container">
                            {
                                data.tags.map((tag: string) => (
                                    <span class="tech-tag">
                                        <i class="ph-bold ph-hash" /> {tag}
                                    </span>
                                ))
                            }
                        </div>
                    </div>

                    <div class="hero-visual">
                        <div class="glass-frame animate-float">
                            <Image
                                src={serviceImage}
                                alt={data.title}
                                class="hero-img"
                                loading="eager"
                                fetchpriority="high"
                                width={600}
                                height={400}
                            />
                            <div
                                class="floating-icon"
                                transition:name={`service-icon-${service.slug}`}
                            >
                                <i class={`ph-duotone ${data.icon}`}></i>
                            </div>
                            <div class="shine-effect"></div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <section class="section-white">
            <div class="container">
                <div class="section-header-center">
                    <span class="section-badge primary"
                        >{data.titleSituaciones}</span
                    >
                    <h2 class="section-title text-dark">
                        {data.subtitleSituaciones}
                    </h2>
                </div>

                <div class="pain-grid">
                    {
                        data.situaciones.map(
                            (item: { icon: string; text: string }) => (
                                <div class="pain-card">
                                    <div class="icon-box-pain">
                                        <i class={`ph-duotone ${item.icon}`} />
                                    </div>
                                    <p>{item.text}</p>
                                </div>
                            ),
                        )
                    }
                </div>
            </div>
        </section>

        <section class="section-process bg-tech-dark">
            <div class="bg-base"></div>
            <div class="tech-grid-bg"></div>

            <div class="container relative-z">
                <div class="content-grid-layout">
                    <div class="main-content">
                        <article class="prose-content">
                            <Content />
                        </article>

                        <div class="timeline-wrapper mt-large">
                            <h3 class="timeline-title">
                                {data.titleEnfoque}
                            </h3>
                            <div class="timeline-steps">
                                {
                                    data.enfoque.map(
                                        (
                                            step: {
                                                titulo: string;
                                                texto: string;
                                            },
                                            idx: number,
                                        ) => (
                                            <div class="timeline-step">
                                                <div class="step-number">{`0${idx + 1}`}</div>
                                                <div class="step-content">
                                                    <h4>{step.titulo}</h4>
                                                    <p>{step.texto}</p>
                                                </div>
                                            </div>
                                        ),
                                    )
                                }
                            </div>
                        </div>

                        <div class="highlight-glass-box">
                            <div class="box-icon">
                                <i class="ph-duotone ph-lightbulb"></i>
                            </div>
                            <div class="box-text">
                                <h4>{data.highlightBox.h3}</h4>
                                <p>{data.highlightBox.p}</p>
                            </div>
                        </div>
                    </div>

                    <aside class="sidebar">
                        <div class="pricing-card-sticky popular">
                            <div class="popular-badge">
                                <i class="ph-fill ph-star"></i> Recomendado
                            </div>
                            <div class="plan-header">
                                <h3 class="plan-name">
                                    {data.bookingCard.title}
                                </h3>
                                <p class="plan-subtitle">
                                    {data.bookingCard.paragraph}
                                </p>
                            </div>

                            <div class="divider"></div>

                            <div class="plan-price">
                                <span class="currency">Inversión estimada</span>
                                <span class="amount">{data.price}</span>
                                <span class="period">{data.duration}</span>
                            </div>

                            <ul class="plan-features">
                                {
                                    data.bookingCard.benefits.map(
                                        (b: { icon: string; text: string }) => (
                                            <li class="feature-item">
                                                <i class="ph-fill ph-check-circle" />
                                                <span>{b.text}</span>
                                            </li>
                                        ),
                                    )
                                }
                            </ul>

                            <a href="#contacto" class="btn-glow full-width">
                                {data.bookingCard.buttonText}
                                <i class="ph-bold ph-arrow-right"></i>
                            </a>
                        </div>
                    </aside>
                </div>
            </div>
        </section>

        <section class="section-gray">
            <div class="container narrow">
                <div class="section-header-center">
                    <span class="section-badge primary">Dudas Comunes</span>
                    <h2 class="section-title text-dark">{data.titleFaqs}</h2>
                    <p class="section-desc text-slate">
                        {data.subtitleFaqs}
                    </p>
                </div>

                <div class="faq-list">
                    {
                        data.faqs.map(
                            (faq: { question: string; answer: string }) => (
                                <details class="faq-item">
                                    <summary class="faq-trigger">
                                        <span class="faq-question">
                                            {faq.question}
                                        </span>
                                        <span class="icon-wrapper">
                                            <i class="ph-bold ph-caret-down" />
                                        </span>
                                    </summary>
                                    <div class="faq-answer">
                                        <p>{faq.answer}</p>
                                    </div>
                                </details>
                            ),
                        )
                    }
                </div>
            </div>
        </section>

        <ServiceCTA
            title={data.bookingCard.title}
            buttonText={data.bookingCard.buttonText}
            serviceName={data.title}
        />
    </main>
</Layout>

<style>
    /* --- ESTRUCTURA & UTILS LOCALES --- */
    .service-page-main {
        padding-top: 0rem;
        margin-top: 7rem;
        margin-bottom: 0;
    } /* El header ya tiene padding */
    .relative-z {
        position: relative;
        z-index: 10;
    }
    .section-white {
        background-color: white;
        padding: 6rem 0;
        margin: 0;
    }
    .section-gray {
        background-color: #f8fafc;
        padding: 6rem 0;
        margin: 0;
    }
    .section-process {
        padding: 6rem 0;
        margin: 0;
    }
    .container.narrow {
        max-width: 800px;
    }
    .full-width {
        width: 100%;
    }

    .section-header-center {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 4rem;
    }
    .section-title.text-dark {
        color: #0f172a;
    }
    .section-desc.text-slate {
        color: #64748b;
        font-size: 1.1rem;
        margin-top: 1rem;
    }

    /* --- HERO STYLES --- */
    .service-hero {
        padding: 6rem 0 6rem;
        position: relative;
    }
    .hero-layout {
        display: grid;
        grid-template-columns: 1fr;
        gap: 4rem;
        align-items: center;
    }
    @media (min-width: 992px) {
        .hero-layout {
            grid-template-columns: 1.1fr 0.9fr;
        }
    }

    /* Breadcrumb Local */
    .breadcrumb-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 6px 16px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 100px;
        margin-bottom: 2rem;
        font-size: 0.85rem;
        color: #94a3b8;
        transition: all 0.3s;
    }
    .breadcrumb-badge a {
        color: #94a3b8;
        text-decoration: none;
    }
    .breadcrumb-badge a:hover {
        color: white;
    }
    .breadcrumb-badge .current {
        color: var(--accent);
        font-weight: 600;
    }

    .hero-title {
        font-size: 2.5rem;
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        color: white;
    }
    @media (min-width: 768px) {
        .hero-title {
            font-size: 3.5rem;
        }
    }
    .hero-desc {
        font-size: 1.2rem;
        color: #94a3b8;
        line-height: 1.6;
        margin-bottom: 2.5rem;
        max-width: 600px;
    }

    /* Tags */
    .tags-container {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }
    .tech-tag {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        background: rgba(99, 102, 241, 0.1);
        color: #a5b4fc;
        border-radius: 6px;
        font-size: 0.85rem;
        font-family: monospace;
        border: 1px solid rgba(99, 102, 241, 0.2);
    }

    /* Hero Visual Glass Card (Local Override for Specific Animation) */
    .glass-frame {
        position: relative;
        border-radius: 2rem;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        transform: perspective(1000px) rotateY(-5deg);
        transition: transform 0.5s ease;
    }
    .glass-frame:hover {
        transform: perspective(1000px) rotateY(0deg);
    }
    .hero-img {
        width: 100%;
        height: auto;
        display: block;
        filter: brightness(0.9);
    }

    .floating-icon {
        position: absolute;
        bottom: 2rem;
        right: 2rem;
        width: 70px;
        height: 70px;
        background: rgba(15, 23, 42, 0.8);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: var(--accent);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        animation: float 6s ease-in-out infinite;
    }
    .shine-effect {
        position: absolute;
        top: 0;
        left: -100%;
        width: 50%;
        height: 100%;
        background: linear-gradient(
            to right,
            transparent,
            rgba(255, 255, 255, 0.1),
            transparent
        );
        transform: skewX(-25deg);
        animation: shine 8s infinite;
        pointer-events: none;
    }

    /* --- PAIN POINTS (Local Styles) --- */
    .pain-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
    }
    .pain-card {
        background: white;
        padding: 2.5rem 2rem;
        border-radius: 1.5rem;
        border: 1px solid #e2e8f0;
        transition: all 0.3s ease;
        height: 100%;
    }
    .pain-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px -5px rgba(99, 102, 241, 0.15);
        border-color: var(--primary);
    }
    .icon-box-pain {
        width: 50px;
        height: 50px;
        background: #f1f5f9;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        color: #0f172a;
        margin-bottom: 1.5rem;
        transition: 0.3s;
    }
    .pain-card:hover .icon-box-pain {
        background: var(--primary);
        color: white;
        transform: rotate(-5deg);
    }
    .pain-card p {
        color: #64748b;
        font-size: 1.05rem;
        line-height: 1.6;
        margin: 0;
    }

    /* --- PROCESS & SIDEBAR LAYOUT --- */
    .content-grid-layout {
        display: grid;
        grid-template-columns: 1fr;
        gap: 4rem;
    }
    @media (min-width: 992px) {
        .content-grid-layout {
            grid-template-columns: 1.5fr 1fr;
            gap: 5rem;
        }
    }

    /* Prose Override for Dark Mode */
    .prose-content :global(h2) {
        font-size: 2rem;
        color: white;
        font-weight: 700;
        margin-bottom: 1.5rem;
    }
    .prose-content :global(p) {
        font-size: 1.1rem;
        color: #94a3b8;
        line-height: 1.8;
        margin-bottom: 1.5rem;
    }
    .prose-content :global(strong) {
        color: white;
    }

    /* Timeline Local */
    .mt-large {
        margin-top: 5rem;
    }
    .timeline-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: white;
        margin-bottom: 2.5rem;
    }
    .timeline-steps {
        position: relative;
        border-left: 2px solid rgba(255, 255, 255, 0.1);
        padding-left: 2.5rem;
        display: flex;
        flex-direction: column;
        gap: 3rem;
    }
    .timeline-step {
        position: relative;
    }
    .step-number {
        position: absolute;
        left: calc(-2.5rem - 16px);
        top: 0;
        width: 32px;
        height: 32px;
        background: #050b14;
        border: 2px solid #334155;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #94a3b8;
        font-family: monospace;
        font-weight: 700;
        font-size: 0.85rem;
        transition: 0.3s;
    }
    .timeline-step:hover .step-number {
        border-color: var(--accent);
        color: var(--accent);
        box-shadow: 0 0 15px rgba(16, 185, 129, 0.2);
    }
    .step-content h4 {
        font-size: 1.25rem;
        color: white;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    .step-content p {
        font-size: 1rem;
        color: #94a3b8;
        line-height: 1.6;
        margin: 0;
    }

    /* Highlight Glass Box */
    .highlight-glass-box {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1.5rem;
        padding: 2rem;
        display: flex;
        gap: 1.5rem;
        align-items: flex-start;
        margin-top: 4rem;
        backdrop-filter: blur(5px);
    }
    .box-icon {
        font-size: 2.5rem;
        color: var(--accent);
        flex-shrink: 0;
    }
    .box-text h4 {
        font-size: 1.1rem;
        color: white;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    .box-text p {
        font-size: 0.95rem;
        color: #94a3b8;
        line-height: 1.5;
        margin: 0;
    }

    /* Sidebar Sticky */
    .sidebar {
        position: relative;
    }
    .pricing-card-sticky {
        position: sticky;
        top: 2rem;
        background: linear-gradient(
            180deg,
            rgba(98, 70, 234, 0.15) 0%,
            rgba(255, 255, 255, 0.02) 100%
        );
        border: 2px solid var(--primary);
        border-radius: 1.5rem;
        padding: 2rem;
        backdrop-filter: blur(10px);
        box-shadow: 0 20px 50px -10px rgba(0, 0, 0, 0.5);
    }

    .popular-badge {
        position: absolute;
        top: -14px;
        left: 50%;
        transform: translateX(-50%);
        background: var(--primary);
        color: white;
        padding: 6px 16px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        gap: 6px;
        box-shadow: 0 4px 15px rgba(98, 70, 234, 0.4);
        white-space: nowrap;
    }

    .plan-header {
        text-align: center;
        margin-bottom: 1.5rem;
    }
    .plan-name {
        font-size: 1.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 0.5rem;
    }
    .plan-subtitle {
        font-size: 0.9rem;
        color: #94a3b8;
        line-height: 1.4;
    }

    .divider {
        height: 1px;
        background: rgba(255, 255, 255, 0.1);
        margin: 1.5rem 0;
    }

    .plan-price {
        text-align: center;
        margin-bottom: 2rem;
    }
    .currency {
        display: block;
        font-size: 0.8rem;
        text-transform: uppercase;
        color: #94a3b8;
        margin-bottom: 0.25rem;
    }
    .amount {
        display: block;
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        line-height: 1;
        margin-bottom: 0.25rem;
    }
    .period {
        font-size: 0.9rem;
        color: var(--accent);
        font-weight: 600;
    }

    .plan-features {
        list-style: none;
        padding: 0;
        margin: 0 0 2rem;
    }
    .feature-item {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
        font-size: 0.9rem;
        color: #cbd5e1;
    }
    .feature-item i {
        color: var(--accent);
        font-size: 1.1rem;
        flex-shrink: 0;
    }

    /* Button Glow (Local styles for now or move to global if prefered) */
    .btn-glow {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        background: var(--primary);
        color: white;
        padding: 1rem 2rem;
        border-radius: 100px;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s;
        box-shadow: 0 0 20px rgba(99, 102, 241, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
    .btn-glow:hover {
        background: #4f46e5;
        box-shadow: 0 0 40px rgba(99, 102, 241, 0.6);
        transform: translateY(-2px);
    }

    /* FAQ Local Styles */
    .faq-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .faq-item {
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 1rem;
        overflow: hidden;
        transition: 0.3s;
    }
    .faq-item[open] {
        border-color: var(--primary);
        box-shadow: 0 4px 20px -2px rgba(98, 70, 234, 0.15);
    }
    .faq-trigger {
        padding: 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;
        list-style: none;
        background: white;
    }
    .faq-trigger::-webkit-details-marker {
        display: none;
    }
    .faq-question {
        font-weight: 700;
        font-size: 1.1rem;
        color: #0f172a;
    }
    .icon-wrapper {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: #f1f5f9;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #64748b;
        transition: 0.3s;
    }
    .faq-item[open] .icon-wrapper {
        background: var(--primary);
        color: white;
        transform: rotate(180deg);
    }
    .faq-answer {
        padding: 0 1.5rem 1.5rem;
        color: #64748b;
        line-height: 1.6;
    }

    /* Animations */
    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-15px);
        }
    }
    @keyframes shine {
        0% {
            left: -100%;
        }
        20% {
            left: 200%;
        }
        100% {
            left: 200%;
        }
    }
    .animate-float {
        animation: float 6s ease-in-out infinite;
    }
</style>
